{% extends 'admin/layout/base.html.twig' %}

{% block title %}Avoir
	{{ creditNote.number }}
	- Administration Delnyx
{% endblock %}

{% block page_title %}Avoir
	{{ creditNote.number }}
{% endblock %}

{% block body %}
	<div
		class="space-y-6">

		{# Header avec breadcrumb #}
		<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 scroll-animate">
			<div>
				<h1 class="text-2xl font-bold text-white">Avoir
					{{ creditNote.number }}</h1>
				<nav class="flex items-center space-x-2 text-sm text-white/60 mt-1">
					<a href="{{ path('admin_dashboard') }}" class="hover:text-white transition-colors duration-200">Dashboard</a>
					<span>{{ ux_icon('lucide:chevron-right', {class: 'w-4 h-4'}) }}</span>
					<a href="{{ path('admin_credit_note_index') }}" class="hover:text-white transition-colors duration-200">Avoirs</a>
					<span>{{ ux_icon('lucide:chevron-right', {class: 'w-4 h-4'}) }}</span>
					<span class="text-white">{{ creditNote.number }}</span>
				</nav>
			</div>
			<div
				class="flex gap-3 flex-wrap">
				{# Bouton Retour #}
				<a href="{{ path('admin_credit_note_index') }}" class="btn-secondary flex items-center gap-2">
					{{ ux_icon('lucide:arrow-left', {class: 'w-4 h-4'}) }}
					Retour
				</a>
			</div>
		</div>

		{# Informations principales #}
		<div
			class="grid grid-cols-1 lg:grid-cols-3 gap-6">

			{# Colonne principale #}
			<div
				class="lg:col-span-2 space-y-6">

				{# Informations de l'avoir #}
				<div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-6 scroll-animate">
					<h2 class="text-xl font-semibold text-white mb-6 flex items-center gap-2">
						{{ ux_icon('lucide:file-minus', {class: 'w-5 h-5'}) }}
						Informations de l'avoir
					</h2>

					<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
						<div>
							<p class="text-sm text-white/60 mb-1">Facture associée</p>
							{% if creditNote.invoice %}
								<a href="{{ path('admin_invoice_show', {id: creditNote.invoice.id}) }}" class="text-blue-400 hover:text-blue-300 transition-colors">
									{{ creditNote.invoice.numero }}
								</a>
								<p class="text-xs text-white/60 mt-1">
									{% if creditNote.invoice.client.companyName %}
										{{ creditNote.invoice.client.companyName }}
										-
										{{ creditNote.invoice.client.prenom }}
										{{ creditNote.invoice.client.nom }}
									{% else %}
										{{ creditNote.invoice.client.prenom }}
										{{ creditNote.invoice.client.nom }}
									{% endif %}
								</p>
							{% else %}
								<p class="text-white/60">Aucune facture</p>
							{% endif %}
						</div>

						<div>
							<p class="text-sm text-white/60 mb-1">Statut</p>
							{% set status = creditNote.statutEnum %}
							<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
									                            {% if status.value == 'draft' %}bg-gray-500/20 text-gray-300
									                            {% elseif status.value == 'issued' %}bg-blue-500/20 text-blue-300
									                            {% elseif status.value == 'sent' %}bg-purple-500/20 text-purple-300
									                            {% elseif status.value == 'refunded' %}bg-green-500/20 text-green-300
									                            {% elseif status.value == 'cancelled' %}bg-gray-600/20 text-gray-400
									                            {% else %}bg-gray-500/20 text-gray-300{% endif %}">
								{{ status.label }}
							</span>
						</div>

						<div>
							<p class="text-sm text-white/60 mb-1">Date de création</p>
							<p class="text-white">{{ creditNote.dateCreation|date('d/m/Y à H:i') }}</p>
						</div>

						{% if creditNote.dateEmission %}
							<div>
								<p class="text-sm text-white/60 mb-1">Date d'émission</p>
								<p class="text-white">{{ creditNote.dateEmission|date('d/m/Y à H:i') }}</p>
							</div>
						{% endif %}

						{% if creditNote.sentAt %}
							<div>
								<p class="text-sm text-white/60 mb-1">Date d'envoi</p>
								<p class="text-white">{{ creditNote.sentAt|date('d/m/Y à H:i') }}</p>
								{% if creditNote.sentCount > 0 %}
									<p class="text-xs text-white/60">Envoyé
										{{ creditNote.sentCount }}
										fois</p>
								{% endif %}
							</div>
						{% endif %}

						<div class="md:col-span-2">
							<p class="text-sm text-white/60 mb-2">Motif</p>
							<p class="text-white whitespace-pre-line">{{ creditNote.reason }}</p>
						</div>
					</div>

					{% if creditNote.invoice %}
					{% set quote = creditNote.invoice.quote %}
					{% if quote %}
						{# Calcul du Total Global Corrigé : Devis initial + tous les avenants signés + avoirs émis non liés #}
						{% set totalGlobalTTC = quote.getMontantTTCInitial() %}
						{% set avenantsSignes = quote.amendments|filter(a => a.statut.value == 'signed') %}
						{% for amendment in avenantsSignes %}
							{% set totalGlobalTTC = totalGlobalTTC + amendment.montantDeltaTTC %}
						{% endfor %}

						{# Ajouter les avoirs émis qui ne sont PAS liés à un avenant (car déjà inclus dans les deltas d'avenant) #}
						{% if quote.invoice %}
							{% set avoirsIndependants = quote.invoice.creditNotes|filter(cn => cn.statutEnum.isEmitted() and not cn.amendment) %}
							{% for independentNote in avoirsIndependants %}
								{% set totalGlobalTTC = totalGlobalTTC + independentNote.montantTTC %}
							{% endfor %}
						{% endif %}

						<div class="mt-6 pt-6 border-t border-white/20">
							<p class="text-sm text-white/60 mb-2">Impact global</p>
							<div class="flex justify-between items-center text-sm mb-2">
								<span class="text-white/60">Total global corrigé (Devis + Avenants + Avoirs)</span>
								<span class="text-white font-semibold">{{ totalGlobalTTC|number_format(2, ',', ' ') }} €</span>
							</div>
							{% if creditNote.isTotal %}
								<p class="text-white text-sm mt-2">Cet avoir annule complètement la prestation liée à {{ creditNote.invoice.numero }}</p>
							{% else %}
								<p class="text-white text-sm mt-2">Cet avoir réduit le montant global de la prestation</p>
							{% endif %}
						</div>
					{% else %}
						<div class="mt-6 pt-6 border-t border-white/20">
							<p class="text-sm text-white/60 mb-2">Impact sur la facture</p>
							<div class="flex justify-between items-center text-sm mb-2">
								<span class="text-white/60">Total facture corrigé</span>
								<span class="text-white font-semibold">{{ creditNote.invoice.totalCorrectedFormatted }}</span>
							</div>
						</div>
					{% endif %}
				{% endif %}

				</div>

				{# Lignes de l'avoir #}
				<div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-6 scroll-animate animate-delay-100">
					<h2 class="text-xl font-semibold text-white mb-6 flex items-center gap-2">
						{{ ux_icon('lucide:list', {class: 'w-5 h-5'}) }}
						Lignes de l'avoir
					</h2>

					{% if creditNote.lines|length > 0 %}
					<div class="hidden md:block overflow-x-auto">
							<table class="w-full">
								<thead class="bg-white/5 border-b border-white/20">
									<tr>
										<th class="px-4 py-3 text-left text-xs font-semibold text-white/80 uppercase">Description</th>
										<th class="px-4 py-3 text-right text-xs font-semibold text-white/80 uppercase">Qté</th>
										<th class="px-4 py-3 text-right text-xs font-semibold text-white/80 uppercase">Montant HT</th>
										{% if companySettings and companySettings.isTvaEnabled() %}
											<th class="px-4 py-3 text-right text-xs font-semibold text-white/80 uppercase">TVA</th>
										{% endif %}
										<th class="px-4 py-3 text-right text-xs font-semibold text-white/80 uppercase">Total TTC</th>
									</tr>
								</thead>
								<tbody class="divide-y divide-white/10">
									{% for line in creditNote.lines %}
										<tr>
											<td class="px-4 py-3 text-white">
												{{ line.description }}
												{% if line.sourceLine %}
													<span class="text-xs text-white/60 block mt-1">(Correction de {{ line.sourceLine.description }})</span>
												{% endif %}
											</td>
											<td class="px-4 py-3 text-right text-white">{{ line.quantity }}</td>
											<td class="px-4 py-3 text-right text-red-400 font-medium">{{ line.totalHt|number_format(2, ',', ' ') }} €</td>
											{% if companySettings and companySettings.isTvaEnabled() %}
												<td class="px-4 py-3 text-right text-white">
													{{ line.tvaRate ? line.tvaRate ~ '%' : '-' }}
												</td>
											{% endif %}
											<td class="px-4 py-3 text-right text-red-400 font-semibold">{{ line.totalTtcFormatted }}</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					{% else %}
						<p class="text-white/60 text-center py-8">Aucune ligne dans cet avoir</p>
					{% endif %}
				</div>
			</div>

			{# Colonne latérale #}
			<div
				class="space-y-6">
				{# Montants #}
				<div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-6 scroll-animate animate-delay-100">
					<h2 class="text-xl font-semibold text-white mb-6 flex items-center gap-2">
						{{ ux_icon('lucide:calculator', {class: 'w-5 h-5'}) }}
						Montants
					</h2>
					<div class="space-y-4">
						{% if companySettings and companySettings.isTvaEnabled() %}
							<div class="flex justify-between">
								<span class="text-white/60">Montant HT</span>
								<span class="text-white font-medium">{{ creditNote.montantHTFormatted }}</span>
							</div>
							<div class="flex justify-between">
								<span class="text-white/60">TVA</span>
								<span class="text-white font-medium">{{ creditNote.montantTVAFormatted }}</span>
							</div>
							<div class="flex justify-between pt-4 border-t border-white/20">
								<span class="text-white font-semibold">Total Global Corrigé</span>
								{% set quote = creditNote.invoice.quote %}
								{% if quote %}
									{% set totalGlobalTTC = quote.getMontantTTCInitial() %}
									{% set avenantsSignes = quote.amendments|filter(a => a.statut.value == 'signed') %}
									{% for amendment in avenantsSignes %}
										{% set totalGlobalTTC = totalGlobalTTC + amendment.montantDeltaTTC %}
									{% endfor %}

									{% if quote.invoice %}
										{% set avoirsIndependants = quote.invoice.creditNotes|filter(cn => cn.statutEnum.isEmitted() and not cn.amendment) %}
										{% for independentNote in avoirsIndependants %}
											{% set totalGlobalTTC = totalGlobalTTC + independentNote.montantTTC %}
										{% endfor %}
									{% endif %}

									<span class="text-white font-bold text-lg">{{ totalGlobalTTC|number_format(2, ',', ' ') }} €</span>
								{% else %}
									<span class="text-white font-bold text-lg">{{ creditNote.invoice.totalCorrectedFormatted }}</span>
								{% endif %}
							</div>
						{% else %}
							{# TVA désactivée : afficher TTC au lieu de HT #}
							<div class="flex justify-between">
								<span class="text-white font-semibold">Total Global Corrigé</span>
								{% set quote = creditNote.invoice.quote %}
								{% if quote %}
									{% set totalGlobalTTC = quote.getMontantTTCInitial() %}
									{% set avenantsSignes = quote.amendments|filter(a => a.statut.value == 'signed') %}
									{% for amendment in avenantsSignes %}
										{% set totalGlobalTTC = totalGlobalTTC + amendment.montantDeltaTTC %}
									{% endfor %}

									{% if quote.invoice %}
										{% set avoirsIndependants = quote.invoice.creditNotes|filter(cn => cn.statutEnum.isEmitted() and not cn.amendment) %}
										{% for independentNote in avoirsIndependants %}
											{% set totalGlobalTTC = totalGlobalTTC + independentNote.montantTTC %}
										{% endfor %}
									{% endif %}

									<span class="text-white font-bold text-lg">{{ totalGlobalTTC|number_format(2, ',', ' ') }} €</span>
								{% else %}
									<span class="text-white font-bold text-lg">{{ creditNote.invoice.totalCorrectedFormatted }}</span>
								{% endif %}
							</div>
						{% endif %}
						{% if creditNote.invoice and creditNote.invoice.quote %}
							{% set quote = creditNote.invoice.quote %}
                            {# Calcul du total payé (règlements effectifs) #}
                            {% set totalPaid = 0 %}

                            {# 1. Facture Principale #}
                            {% if quote.invoice and quote.invoice.statut == 'paid' %}
                                {% set totalPaid = quote.montantTTCInitial %}
                            {% else %}
                                {% set totalPaid = quote.totalPaidDeposits %}
                            {% endif %}

                            {# 2. Factures des avenants et remoursements d'avoirs #}
                            {% set avenantsSignes = quote.amendments|filter(a => a.statut.value == 'signed') %}
                            {% for otherAmendment in avenantsSignes %}
                                {# Complément d'avenant payé #}
                                {% if otherAmendment.invoice and otherAmendment.invoice.statut == 'paid' %}
                                    {% set totalPaid = totalPaid + otherAmendment.invoice.montantTTC %}
                                {% endif %}

                                {# Avoir remboursé #}
                                {% if otherAmendment.creditNote and otherAmendment.creditNote.statut == 'refunded' %}
                                    {% set totalPaid = totalPaid - otherAmendment.creditNote.montantTTC %}
                                {% endif %}
                            {% endfor %}

                            {% if totalPaid > 0 %}
                                <div class="pt-4 border-t border-white/20">
                                    <div class="flex justify-between items-center mb-2">
                                        <span class="text-white/60">Déjà réglé sur devis</span>
                                        <span class="text-green-400 font-semibold">{{ totalPaid|number_format(2, ',', ' ') }} €</span>
                                    </div>

                                    {% set solde = quote.montantTTC - totalPaid %}
                                    <div class="flex justify-between items-center">
                                        <span class="text-white font-medium">
                                            {% if solde < 0 %}Reste à rembourser{% else %}Reste à payer (Solde){% endif %}
                                        </span>
                                        <span class="text-white font-bold">
                                            {{ solde|abs|number_format(2, ',', ' ') }} €
                                        </span>
                                    </div>
                                </div>
                            {% endif %}
						{% endif %}
					</div>
				</div>

				{# Actions #}
				<div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-6 scroll-animate animate-delay-200">
					<h2 class="text-xl font-semibold text-white mb-6 flex items-center gap-2">
						{{ ux_icon('lucide:zap', {class: 'w-5 h-5'}) }}
						Actions
					</h2>

					<div class="space-y-3">
						{{ component('EntityActions', {
                        entity: creditNote,
                        type: 'credit_note',
                        layout: 'vertical'
                    }) }}
					</div>
				</div>

				{# Liens rapides - Liens signés pour le client #}
				{% if creditNote.statutEnum.value in ['issued', 'sent'] %}
					<div class="scroll-animate animate-delay-300">
						{{ component('MagicLinks', {
                        entity: creditNote,
                        entityType: 'credit_note',
                        availableActions: ['view', 'apply']
                    }) }}
					</div>
				{% endif %}
			</div>
		</div>
	</div>

	{# Modal d'envoi d'email #}
	{{ component('EmailModal') }}

	{# Modal d'annulation #}
	{{ component('CancelModal') }}

{% endblock %}
