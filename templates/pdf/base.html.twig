<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title|default('Document') }}</title>
		<style>
			/* Reset et base */
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			@page {
				size: A4;
				margin: 15mm;
			}

			body {
				font-family: 'Arial', sans-serif;
				font-size: 11px;
				line-height: 1.4;
				color: #333;
				background: white;
			}

			/* Layout principal */
			.document {
				max-width: 210mm;
				margin: 0 auto;
				padding: 15mm;
				background: white;
			}

			/* En-tête */
			.header {
				display: table;
				width: 100%;
				margin-bottom: 25px;
				border-bottom: 2px solid #2563eb;
				padding-bottom: 15px;
			}

			.company-info {
				display: table-cell;
				width: 60%;
				vertical-align: top;
			}

			.document-info {
				display: table-cell;
				width: 40%;
				text-align: right;
				vertical-align: top;
			}

			.company-logo {
				margin-bottom: 8px;
				background-color: #0f172a;
				padding: 8px 12px;
				border-radius: 6px;
				display: inline-block;
			}

			.company-logo img {
				height: 40px;
				width: auto;
				max-width: 200px;
			}

			.company-details {
				font-size: 10px;
				color: #666;
				line-height: 1.5;
			}

			.document-title {
				font-size: 26px;
				font-weight: bold;
				color: #2563eb;
				margin-bottom: 8px;
			}

			.document-number {
				font-size: 13px;
				font-weight: bold;
				color: #333;
			}

			.document-date {
				font-size: 10px;
				color: #666;
				margin-top: 5px;
			}

			/* Informations client */
			.client-section {
				display: table;
				width: 100%;
				margin-bottom: 20px;
			}

			.client-info,
			.company-billing {
				display: table-cell;
				vertical-align: top;
				padding: 12px;
				background: #f8fafc;
				border: 1px solid #e2e8f0;
				border-radius: 4px;
			}

			.client-info {
				width: 55%;
			}

			.company-billing {
				width: 42%;
				margin-left: 3%;
			}

			.section-title {
				font-size: 12px;
				font-weight: bold;
				color: #2563eb;
				margin-bottom: 8px;
				text-transform: uppercase;
			}

			.client-name {
				font-size: 14px;
				font-weight: bold;
				color: #333;
				margin-bottom: 6px;
			}

			.client-details {
				font-size: 10px;
				color: #666;
				line-height: 1.5;
			}

			/* Tableau des services */
			.services-table {
				width: 100%;
				border-collapse: collapse;
				margin-bottom: 20px;
			}

			.services-table th,
			.services-table td {
				padding: 10px 6px;
				text-align: left;
				border-bottom: 1px solid #e2e8f0;
			}

			.services-table th {
				background: #f1f5f9;
				font-weight: bold;
				color: #334155;
				font-size: 10px;
				text-transform: uppercase;
			}

			.services-table td {
				font-size: 10px;
				color: #333;
			}

			.services-table .text-right {
				text-align: right;
			}

			.services-table .text-center {
				text-align: center;
			}

			/* Totaux */
			.totals {
				display: table;
				width: 100%;
				margin-bottom: 20px;
			}

			.totals-table {
				width: 280px;
				margin-left: auto;
				border-collapse: collapse;
			}

			.totals-table td {
				padding: 8px 10px;
				border-bottom: 1px solid #e2e8f0;
				font-size: 10px;
			}

			.totals-table .label {
				text-align: right;
				color: #666;
				font-weight: normal;
			}

			.totals-table .amount {
				text-align: right;
				font-weight: bold;
				color: #333;
			}

			.totals-table .total-row {
				background: #f1f5f9;
				font-weight: bold;
				color: #2563eb;
				font-size: 11px;
			}

			/* Conditions et notes */
			.conditions-section {
				margin-bottom: 20px;
				page-break-inside: avoid;
			}

			.conditions-title {
				font-size: 12px;
				font-weight: bold;
				color: #2563eb;
				margin-bottom: 8px;
			}

			.conditions-content {
				font-size: 9px;
				color: #666;
				line-height: 1.5;
				background: #f8fafc;
				padding: 12px;
				border-radius: 4px;
				border-left: 3px solid #2563eb;
				border: 1px solid #e2e8f0;
			}

			.notes-section {
				margin-bottom: 15px;
				font-size: 10px;
				color: #555;
				page-break-inside: avoid;
			}

			/* Pied de page */
			.footer {
				margin-top: 30px;
				padding-top: 15px;
				border-top: 1px solid #e2e8f0;
				text-align: center;
				font-size: 9px;
				color: #666;
				page-break-inside: avoid;
			}

			/* Mentions légales */
			.legal-mentions {
				font-size: 8px;
				color: #888;
				line-height: 1.4;
				margin-top: 15px;
				padding: 12px;
				background: #f8fafc;
				border-radius: 4px;
				border: 1px solid #e2e8f0;
				page-break-inside: avoid;
			}

			/* ========== PAGINATION ========== */
			/* Éviter les coupures au milieu des éléments */
			.no-break {
				page-break-inside: avoid;
			}

			/* Le tableau peut se couper mais pas les lignes */
			.services-table {
				page-break-inside: auto;
			}

			.services-table tr {
				page-break-inside: avoid;
				page-break-after: auto;
			}

			.services-table thead {
				display: table-header-group;
			}

			/* Garder les totaux ensemble */
			.totals {
				page-break-inside: avoid;
			}

			/* Garder les conditions et mentions ensemble */
			.conditions-section,
			.legal-mentions,
			.footer {
				page-break-inside: avoid;
			}

			/* Forcer un saut de page si nécessaire */
			.page-break {
				page-break-after: always;
			}

			/* Styles pour les statuts */
			.status-badge {
				display: inline-block;
				padding: 4px 8px;
				border-radius: 12px;
				font-size: 9px;
				font-weight: bold;
				text-transform: uppercase;
			}

			.status-brouillon {
				background: #fef3c7;
				color: #92400e;
			}
			.status-envoye {
				background: #dbeafe;
				color: #1e40af;
			}
			.status-accepte {
				background: #d1fae5;
				color: #065f46;
			}
			.status-refuse {
				background: #fee2e2;
				color: #991b1b;
			}

			/* Impression */
			@media print {
				body {
					-webkit-print-color-adjust: exact;
					print-color-adjust: exact;
				}
			}
		</style>
	</head>
	<body>
		<div class="document"> {% block content %}{% endblock %}
			</div>
		</body>
	</html>
