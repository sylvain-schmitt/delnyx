{% extends 'admin/layout/base.html.twig' %}
{% import 'admin/macros/pagination.html.twig' as pagination_macro %}

{% block title %}Avoirs - Administration Delnyx{% endblock %}

{% block page_title %}Avoirs{% endblock %}

{% block body %}
<div class="space-y-6">
    
    {# Message de filtrage par facture #}
    {% if filtered_invoice %}
        <div class="bg-blue-500/20 border border-blue-500/30 rounded-lg p-4 flex items-center justify-between scroll-animate">
            <div class="flex items-center gap-3">
                {{ ux_icon('lucide:filter', {class: 'w-5 h-5 text-blue-400'}) }}
                <div>
                    <p class="text-white font-medium">Filtrage actif : Avoirs de la facture {{ filtered_invoice.numero }}</p>
                    <p class="text-white/60 text-sm">{{ total_credit_notes }} avoir{{ total_credit_notes > 1 ? 's' : '' }} trouvé{{ total_credit_notes > 1 ? 's' : '' }}</p>
                </div>
            </div>
            <a href="{{ path('admin_credit_note_index') }}" class="btn-secondary text-sm py-2 px-4">
                {{ ux_icon('lucide:x', {class: 'w-4 h-4'}) }}
                Retirer le filtre
            </a>
        </div>
    {% endif %}

    {# Header avec actions #}
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 scroll-animate">
        <div>
            <h1 class="text-2xl font-bold text-white">Avoirs</h1>
            <p class="text-white/60 mt-1">{{ total_credit_notes }} avoir{{ total_credit_notes > 1 ? 's' : '' }} au total{% if not include_cancelled %} (hors annulés){% endif %}</p>
        </div>
        <div class="flex gap-3">
            {% if include_cancelled %}
                <a href="{{ path('admin_credit_note_index') }}" class="btn-secondary flex items-center gap-2">
                    {{ ux_icon('lucide:eye-off', {class: 'w-4 h-4'}) }}
                    Masquer les annulés
                </a>
            {% else %}
                <a href="{{ path('admin_credit_note_index', {include_cancelled: true}) }}" class="btn-secondary flex items-center gap-2">
                    {{ ux_icon('lucide:eye', {class: 'w-4 h-4'}) }}
                    Afficher les annulés
                </a>
            {% endif %}
            <a href="{{ path('admin_credit_note_new') }}" class="btn-primary flex items-center gap-2">
                {{ ux_icon('lucide:file-plus', {class: 'w-4 h-4'}) }}
                Nouvel Avoir
            </a>
        </div>
    </div>

    {# Liste des avoirs #}
    {% if creditNotes|length > 0 %}
        {# Version desktop : table #}
        <div class="hidden md:block bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl overflow-hidden scroll-animate animate-delay-100">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-white/5 border-b border-white/20">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Numéro</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Facture</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Date</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Montant TTC</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Statut</th>
                            <th class="px-6 py-4 text-right text-xs font-semibold text-white/80 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-white/10">
                        {% for creditNote in creditNotes %}
                            <tr class="hover:bg-white/5 transition-colors duration-200">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-white">{{ creditNote.number ?? 'N/A' }}</div>
                                </td>
                                <td class="px-6 py-4">
                                    {% if creditNote.invoice %}
                                        <div class="text-sm text-white">{{ creditNote.invoice.numero }}</div>
                                        <div class="text-xs text-white/60">{{ creditNote.invoice.client.nomComplet }}</div>
                                    {% else %}
                                        <div class="text-sm text-white/60">Aucune facture</div>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-white">{{ creditNote.dateCreation|date('d/m/Y') }}</div>
                                    {% if creditNote.dateEmission %}
                                        <div class="text-xs text-white/60">Émis le {{ creditNote.dateEmission|date('d/m/Y') }}</div>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-white">{{ creditNote.montantTTCFormatted }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {% set status = creditNote.statutEnum %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                        {% if status.value == 'draft' %}bg-gray-500/20 text-gray-300
                                        {% elseif status.value == 'issued' %}bg-blue-500/20 text-blue-300
                                        {% elseif status.value == 'sent' %}bg-purple-500/20 text-purple-300
                                        {% elseif status.value == 'cancelled' %}bg-gray-600/20 text-gray-400
                                        {% else %}bg-gray-500/20 text-gray-300{% endif %}">
                                        {{ status.label }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex items-center justify-end gap-2">
                                        {# Bouton Voir #}
                                        <a href="{{ path('admin_credit_note_show', {id: creditNote.id}) }}" 
                                           class="text-blue-400 hover:text-blue-300 transition-colors duration-200"
                                           title="Voir">
                                            {{ ux_icon('lucide:eye', {class: 'w-4 h-4'}) }}
                                        </a>
                                        
                                        {# Bouton Modifier : visible si DRAFT uniquement #}
                                        {% if creditNote.canBeModified %}
                                            <a href="{{ path('admin_credit_note_edit', {id: creditNote.id}) }}" 
                                               class="text-yellow-400 hover:text-yellow-300 transition-colors duration-200"
                                               title="Modifier">
                                                {{ ux_icon('lucide:edit', {class: 'w-4 h-4'}) }}
                                            </a>
                                        {% endif %}
                                        
                                        {# Bouton Émettre : visible si DRAFT uniquement #}
                                        {% if creditNote.canBeIssued %}
                                            <form action="{{ path('admin_credit_note_issue', {id: creditNote.id}) }}" method="POST" class="inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('credit_note_issue_' ~ creditNote.id) }}">
                                                <button type="submit" class="text-blue-400 hover:text-blue-300 transition-colors duration-200" title="Émettre">
                                                    {{ ux_icon('lucide:send', {class: 'w-4 h-4'}) }}
                                                </button>
                                            </form>
                                        {% endif %}
                                        
                                        {# Bouton Envoyer : visible si ISSUED uniquement #}
                                        {% if creditNote.statutEnum.value == 'issued' %}
                                            <form action="{{ path('admin_credit_note_send', {id: creditNote.id}) }}" method="POST" class="inline" data-action="submit->confirm-modal#open" data-confirm-modal-message="Envoyer cet avoir au client ?">
                                                <input type="hidden" name="_token" value="{{ csrf_token('credit_note_send_' ~ creditNote.id) }}">
                                                <button type="submit" class="text-blue-400 hover:text-blue-300 transition-colors duration-200" title="Envoyer">
                                                    {{ ux_icon('lucide:mail', {class: 'w-4 h-4'}) }}
                                                </button>
                                            </form>
                                        {% endif %}
                                        
                                        {# Bouton Annuler : visible si DRAFT ou ISSUED #}
                                        {% if creditNote.statutEnum.canBeCancelled %}
                                            <form action="{{ path('admin_credit_note_cancel', {id: creditNote.id}) }}" method="POST" class="inline" data-action="submit->confirm-modal#open" data-confirm-modal-message="Êtes-vous sûr de vouloir annuler cet avoir ?">
                                                <input type="hidden" name="_token" value="{{ csrf_token('credit_note_cancel_' ~ creditNote.id) }}">
                                                <button type="submit" class="text-red-400 hover:text-red-300 transition-colors duration-200" title="Annuler">
                                                    {{ ux_icon('lucide:x-circle', {class: 'w-4 h-4'}) }}
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {# Version mobile : cards #}
        <div class="md:hidden space-y-4 scroll-animate animate-delay-100">
            {% for creditNote in creditNotes %}
                <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-4">
                    <div class="flex items-start justify-between mb-3">
                        <div class="flex-1">
                            <div class="text-sm font-medium text-white mb-1">{{ creditNote.number ?? 'N/A' }}</div>
                            {% if creditNote.invoice %}
                                <div class="text-sm text-white">{{ creditNote.invoice.numero }}</div>
                                <div class="text-xs text-white/60">{{ creditNote.invoice.client.nomComplet }}</div>
                            {% endif %}
                        </div>
                        <div class="flex items-center gap-2 ml-4 flex-wrap">
                            {# Bouton Voir #}
                            <a href="{{ path('admin_credit_note_show', {id: creditNote.id}) }}" 
                               class="text-blue-400 hover:text-blue-300 transition-colors duration-200 p-2"
                               title="Voir">
                                {{ ux_icon('lucide:eye', {class: 'w-5 h-5'}) }}
                            </a>
                            
                            {# Bouton Modifier : visible si DRAFT uniquement #}
                            {% if creditNote.canBeModified %}
                                <a href="{{ path('admin_credit_note_edit', {id: creditNote.id}) }}" 
                                   class="text-yellow-400 hover:text-yellow-300 transition-colors duration-200 p-2"
                                   title="Modifier">
                                    {{ ux_icon('lucide:edit', {class: 'w-5 h-5'}) }}
                                </a>
                            {% endif %}
                            
                            {# Bouton Émettre : visible si DRAFT uniquement #}
                            {% if creditNote.canBeIssued %}
                                <form action="{{ path('admin_credit_note_issue', {id: creditNote.id}) }}" method="POST" class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('credit_note_issue_' ~ creditNote.id) }}">
                                    <button type="submit" class="text-blue-400 hover:text-blue-300 transition-colors duration-200 p-2" title="Émettre">
                                        {{ ux_icon('lucide:send', {class: 'w-5 h-5'}) }}
                                    </button>
                                </form>
                            {% endif %}
                            
                            {# Bouton Envoyer : visible si ISSUED uniquement #}
                            {% if creditNote.statutEnum.value == 'issued' %}
                                <form action="{{ path('admin_credit_note_send', {id: creditNote.id}) }}" method="POST" class="inline" data-action="submit->confirm-modal#open" data-confirm-modal-message="Envoyer cet avoir au client ?">
                                    <input type="hidden" name="_token" value="{{ csrf_token('credit_note_send_' ~ creditNote.id) }}">
                                    <button type="submit" class="text-blue-400 hover:text-blue-300 transition-colors duration-200 p-2" title="Envoyer">
                                        {{ ux_icon('lucide:mail', {class: 'w-5 h-5'}) }}
                                    </button>
                                </form>
                            {% endif %}
                            
                            {# Bouton Annuler : visible si DRAFT ou ISSUED #}
                            {% if creditNote.statutEnum.canBeCancelled %}
                                <form action="{{ path('admin_credit_note_cancel', {id: creditNote.id}) }}" method="POST" class="inline" data-action="submit->confirm-modal#open" data-confirm-modal-message="Êtes-vous sûr de vouloir annuler cet avoir ?">
                                    <input type="hidden" name="_token" value="{{ csrf_token('credit_note_cancel_' ~ creditNote.id) }}">
                                    <button type="submit" class="text-red-400 hover:text-red-300 transition-colors duration-200 p-2" title="Annuler">
                                        {{ ux_icon('lucide:x-circle', {class: 'w-5 h-5'}) }}
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="space-y-2 text-sm">
                        <div class="flex justify-between">
                            <span class="text-white/60">Date</span>
                            <span class="text-white">{{ creditNote.dateCreation|date('d/m/Y') }}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-white/60">Montant TTC</span>
                            <span class="text-white font-medium">{{ creditNote.montantTTCFormatted }}</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-white/60">Statut</span>
                            {% set status = creditNote.statutEnum %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                        {% if status.value == 'draft' %}bg-gray-500/20 text-gray-300
                                {% elseif status.value == 'issued' %}bg-blue-500/20 text-blue-300
                                {% elseif status.value == 'sent' %}bg-purple-500/20 text-purple-300
                                {% elseif status.value == 'cancelled' %}bg-gray-600/20 text-gray-400
                                {% else %}bg-gray-500/20 text-gray-300{% endif %}">
                                {{ status.label }}
                            </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Pagination #}
        {{ pagination_macro.render(current_page, total_pages, 'admin_credit_note_index', {}, 15, total_credit_notes) }}
    {% else %}
        {# État vide #}
        <div class="text-center py-20 scroll-animate">
            <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-12 max-w-md mx-auto">
                {{ ux_icon('lucide:file-minus', {class: 'w-16 h-16 text-gray-400 mb-6 mx-auto'}) }}
                <h3 class="text-2xl font-bold text-white mb-4">Aucun avoir</h3>
                <p class="text-gray-300 mb-6">
                    Créez un avoir pour annuler ou ajuster une facture émise.
                </p>
                <a href="{{ path('admin_credit_note_new') }}" class="btn-primary">
                    {{ ux_icon('lucide:file-plus', {class: 'w-4 h-4 mr-2'}) }}
                    Créer un avoir
                </a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}

