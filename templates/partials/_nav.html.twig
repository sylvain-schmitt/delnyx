<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-500" id="navbar">
    {# Navbar avec effet glassmorphique #}
    <div class="bg-slate-900/80 backdrop-blur-xl shadow-2xl shadow-black/20">
        <div class="max-w-7xl mx-auto px-6 sm:px-8">
            <div class="flex justify-between items-center h-16 lg:h-18">
                
                {# Logo avec effet de glow #}
                <div class="flex-shrink-0">
                    <a href="{{ path('app_home') }}" class="flex items-center space-x-3 group">
                        <div class="relative">
                            <div class="absolute -inset-2 bg-gradient-to-r from-blue-500/20 to-cyan-500/20 rounded-lg blur opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                            <img src="{{ asset('images/logo-delnyx.svg') }}" 
                                 alt="Delnyx - Développement web freelance Symfony et React" 
                                 class="h-10 sm:h-12 lg:h-14 w-auto relative z-10 transition-all duration-300 group-hover:scale-110">
                        </div>
                    </a>
                </div>

                {# Desktop Navigation avec effets glassmorphiques #}
                <nav class="hidden md:flex items-center space-x-2">
                    <a href="{{ path('app_home') }}" 
                       class="nav-link relative px-4 py-2 rounded-xl font-medium transition-all duration-300 group
                              {{ app.request.attributes.get('_route') == 'app_home' ? 'text-blue-400 bg-blue-500/10' : 'text-slate-300 hover:text-white hover:bg-white/5' }}">
                        <span class="relative z-10">Accueil</span>
                        {% if app.request.attributes.get('_route') == 'app_home' %}
                            <div class="absolute inset-0 bg-gradient-to-r from-blue-500/20 to-cyan-500/20 rounded-xl"></div>
                        {% endif %}
                    </a>

                    <a href="{{ path('app_services') }}" 
                       class="nav-link relative px-4 py-2 rounded-xl font-medium transition-all duration-300 group
                              {{ app.request.attributes.get('_route') == 'app_services' ? 'text-blue-400 bg-blue-500/10' : 'text-slate-300 hover:text-white hover:bg-white/5' }}">
                        <span class="relative z-10">Services</span>
                        {% if app.request.attributes.get('_route') == 'app_services' %}
                            <div class="absolute inset-0 bg-gradient-to-r from-blue-500/20 to-cyan-500/20 rounded-xl"></div>
                        {% endif %}
                    </a>
                    
                    <a href="{{ path('app_portfolio') }}" 
                       class="nav-link relative px-4 py-2 rounded-xl font-medium transition-all duration-300 group
                              {{ app.request.attributes.get('_route') == 'app_portfolio' ? 'text-blue-400 bg-blue-500/10' : 'text-slate-300 hover:text-white hover:bg-white/5' }}">
                        <span class="relative z-10">Portfolio</span>
                        {% if app.request.attributes.get('_route') == 'app_portfolio' %}
                            <div class="absolute inset-0 bg-gradient-to-r from-blue-500/20 to-cyan-500/20 rounded-xl"></div>
                        {% endif %}
                    </a>
                    
                    {# Bouton Contact avec effet spécial #}
                    <a href="{{ path('app_contact') }}" 
                       class="ml-4 px-6 py-2 bg-gradient-to-r from-blue-500 to-purple-500 text-white font-semibold rounded-xl 
                              shadow-lg shadow-blue-500/25 hover:shadow-blue-500/40 hover:shadow-xl 
                              transform hover:-translate-y-0.5 transition-all duration-300 group">
                        <span class="flex items-center space-x-2">
                            <span>Contact</span>
                            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                            </svg>
                        </span>
                    </a>
                </nav>

                {# Mobile menu button avec effet glassmorphique #}
                <div class="md:hidden">
                    <button id="menu-toggle" 
                            class="p-3 rounded-xl bg-white/5 border border-white/10 text-slate-300 hover:text-white hover:bg-white/10 focus:outline-none transition-all duration-300 group">
                        <svg id="icon-menu" class="h-5 w-5 transition-transform duration-300 group-hover:scale-110" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>
                        <svg id="icon-close" class="h-5 w-5 hidden transition-transform duration-300 group-hover:scale-110" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>

    {# Mobile Navigation avec glassmorphisme #}
    <div id="mobile-menu" class="overflow-hidden max-h-0 md:hidden transition-all duration-500 ease-out">
        <div class="bg-slate-900/90 shadow-2xl shadow-black/20">
            <div class="px-6 py-4 space-y-2">
                <a href="{{ path('app_home') }}" 
                   class="block px-4 py-3 rounded-xl text-center font-medium transition-all duration-300
                          {{ app.request.attributes.get('_route') == 'app_home' ? 'text-blue-400 bg-blue-500/10' : 'text-slate-300 hover:text-white hover:bg-white/5' }}">
                    Accueil
                </a>
                
                <a href="{{ path('app_services') }}" 
                   class="block px-4 py-3 rounded-xl text-center font-medium transition-all duration-300
                          {{ app.request.attributes.get('_route') == 'app_services' ? 'text-blue-400 bg-blue-500/10' : 'text-slate-300 hover:text-white hover:bg-white/5' }}">
                    Services
                </a>
                
                <a href="{{ path('app_portfolio') }}" 
                   class="block px-4 py-3 rounded-xl text-center font-medium transition-all duration-300
                          {{ app.request.attributes.get('_route') == 'app_portfolio' ? 'text-blue-400 bg-blue-500/10' : 'text-slate-300 hover:text-white hover:bg-white/5' }}">
                    Portfolio
                </a>
                
                {# Bouton Contact mobile avec gradient #}
                <div class="pt-2">
                    <a href="{{ path('app_contact') }}" 
                       class="block px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-500 text-white font-semibold rounded-xl text-center
                              shadow-lg shadow-blue-500/25 hover:shadow-blue-500/40 transform hover:-translate-y-0.5 transition-all duration-300">
                        Contact
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>