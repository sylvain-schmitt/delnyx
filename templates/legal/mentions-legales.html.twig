{% extends 'layout/base.html.twig' %}

{% block title %}Mentions Légales |
	{{ parent() }}
{% endblock %}

{% block meta_description %}Mentions légales du site Delnyx : informations sur l'éditeur, hébergeur, propriété intellectuelle et protection des données personnelles (RGPD).
{% endblock %}

{% block meta_keywords %}mentions légales, éditeur, hébergeur, RGPD, données personnelles, Delnyx
{% endblock %}

{% block body %}
	{# Hero Section avec fond animé #}
	<section
		class="relative bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 overflow-hidden section-transition py-20 lg:py-32" loading="lazy">
		{# Effets de lumière d'ambiance #}
		<div class="light-ambient light-1 opacity-20 animate-pulse" style="animation-delay: 0.5s;"></div>
		<div class="light-ambient light-2 opacity-15 animate-pulse" style="animation-delay: 1.2s;"></div>

		{# Motifs d'arrière-plan #}
		<div class="absolute inset-0 bg-grid-pattern opacity-5"></div>

		<div class="relative z-10 flex items-center justify-center px-6 sm:px-8">
			<div
				class="max-w-4xl mx-auto text-center">
				{# Titre principal #}
				<div class="scroll-animate">
					<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6">
						Mentions
						<span class="text-blue-400">Légales</span>
					</h1>
					<p class="text-xl sm:text-2xl text-gray-300 mb-12 leading-relaxed max-w-3xl mx-auto">
						Informations légales et réglementaires concernant le site Delnyx
					</p>
				</div>

				{# Breadcrumb stylisé #}
				<div class="scroll-animate animate-delay-100">
					<nav class="glass-card optimized-blur px-6 py-4 rounded-2xl inline-flex items-center space-x-2 text-sm">
						<a href="{{ path('app_home') }}" class="text-blue-400 hover:text-blue-300 transition-colors duration-300">Accueil</a>
						<span class="text-gray-500">/</span>
						<span class="text-gray-300">Mentions Légales</span>
					</nav>
				</div>
			</div>
		</div>
	</section>

	{# Contenu principal #}
	<section
		class="relative bg-gradient-to-br from-slate-800 via-slate-900 to-slate-800 py-20 section-transition" loading="lazy">
