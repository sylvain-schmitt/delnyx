{% extends 'layout/base.html.twig' %}

{% block title %}Portfolio |
	{{ parent() }}
{% endblock %}

{% block meta_description %}Découvrez mon portfolio de projets web. Applications Symfony, sites vitrines, e-commerce et solutions sur-mesure pour TPE et PME. Développeur freelance basé à Ronchamp.
{% endblock %}

{% block meta_keywords %}portfolio, projets web, Symfony, développement, freelance, Ronchamp, applications, sites web
{% endblock %}

{% block body %}
	<div
		data-controller="portfolio">
		{# Hero Section avec Breadcrumb #}
		<section
			class="relative py-20 lg:py-32 overflow-hidden bg-gradient-to-br from-slate-900 via-slate-800 to-slate-700 section-transition" loading="lazy">
			{# Effets de lumière d'ambiance responsives #}
			<div class="absolute top-1/4 left-[2%] w-[120px] h-[120px] sm:w-[200px] sm:h-[200px] sm:left-[15%] rounded-full light-ambient opacity-20 z-10" style="background: radial-gradient(circle, rgba(59,130,246,0.25) 0%, transparent 70%);"></div>
			<div class="absolute bottom-1/4 right-[2%] w-[100px] h-[100px] sm:w-[150px] sm:h-[150px] sm:right-[15%] rounded-full light-ambient opacity-20 z-10" style="background: radial-gradient(circle, rgba(139,92,246,0.25) 0%, transparent 70%); animation-delay: 1s;"></div>

			<div
				class="relative z-10 max-w-7xl mx-auto px-6 sm:px-8">
				{# Titre Hero #}
				<div class="text-center scroll-animate">
					<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6">
						Mon
						<span class="bg-gradient-to-r from-blue-400 via-cyan-400 to-purple-500 bg-clip-text text-transparent">
							Portfolio
						</span>
					</h1>
					<p class="text-xl sm:text-2xl text-gray-300 max-w-4xl mx-auto">
						Découvrez mes réalisations et projets en développement web
					</p>
				</div>

				{# Filtres par technologie #}
				{% if technologies|length > 0 %}
					<div class="flex flex-wrap justify-center gap-4 mt-12 scroll-animate" data-delay="0.3s">
						<a href="{{ path('app_portfolio') }}" class="btn-secondary px-6 py-3 rounded-full text-sm font-medium transition-all duration-300 {% if not selectedTechnology %}bg-blue-600 text-white shadow-lg shadow-blue-600/25 border-blue-600{% else %}hover:bg-white/20{% endif %} backdrop-blur-sm border border-white/20 flex items-center justify-center min-w-[140px]">
							{{ ux_icon('lucide:grid', {class: 'w-4 h-4 mr-2'}) }}
							Tous les projets
						</a>
						{% for technology in technologies %}
							<a href="{{ path('app_portfolio', {technology: technology.id}) }}" class="btn-secondary px-6 py-3 rounded-full text-sm font-medium transition-all duration-300{% if selectedTechnology == technology.id %}bg-blue-600 text-white shadow-lg shadow-blue-600/25 border-blue-600{% else %}hover:bg-white/20{% endif %} backdrop-blur-sm border border-white/20 flex items-center justify-center min-w-[140px]" style="border-color: {{ technology.couleur }}20;">
								{% if technology.icone %}
									{{ ux_icon(technology.icone, {class: 'w-4 h-4 mr-2'}) }}
								{% endif %}
								{{ technology.nom }}
							</a>
						{% endfor %}
					</div>
				{% endif %}
			</div>
		</section>

		{# Section Projets #}
		<section class="relative py-20 lg:py-32 overflow-hidden section-transition" loading="lazy">
			<div class="absolute inset-0 bg-gradient-to-b from-slate-800 to-slate-900"></div>

			{# Effets de lumière d'ambiance responsives #}
			<div class="absolute top-1/3 left-[5%] w-[140px] h-[140px] sm:w-[200px] sm:h-[200px] sm:left-[20%] rounded-full light-ambient opacity-15 z-10" style="background: radial-gradient(circle, rgba(6,182,212,0.25) 0%, transparent 70%);"></div>
			<div class="absolute bottom-1/4 right-[8%] w-[120px] h-[120px] sm:w-[180px] sm:h-[180px] sm:right-[25%] rounded-full light-ambient opacity-10 z-10" style="background: radial-gradient(circle, rgba(139,92,246,0.2) 0%, transparent 70%); animation-delay: 2s;"></div>

			<div class="relative z-10 max-w-7xl mx-auto px-6 sm:px-8">
				{% if projects|length > 0 %}
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
						{% for project in projects %}
							<div class="group scroll-animate" data-delay="{{ loop.index * 0.1 }}s">
								<div
									class="glass-card optimized-blur overflow-hidden transition-all duration-500 hover:bg-white/12 hover:transform hover:-translate-y-2 h-full flex flex-col">

									{# Image du projet #}
									<div class="relative h-64 overflow-hidden rounded-2xl">
										{% if project.images|length > 0 %}
											{% set mainImage = project.images|first %}
											<img src="{{ mainImage.imageUrl }}" alt="{{ mainImage.altText ?? project.titre }}" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
										{% else %}
											<div class="w-full h-full bg-gradient-to-br from-blue-500/20 to-purple-500/20 flex items-center justify-center">
												{{ ux_icon('lucide:image', {class: 'w-12 h-12 text-white/30'}) }}
											</div>
										{% endif %}
									</div>

									{# Contenu du projet #}
									<div class="p-6 flex-1 flex flex-col">
										<h3 class="text-xl font-bold text-white mb-3 group-hover:text-blue-400 transition-colors duration-300">
											{{ project.titre }}
										</h3>

										<p class="text-gray-300 text-sm mb-4 flex-1">
											{{ (project.description|striptags)|length > 100 ? (project.description|striptags)|slice(0, 100) ~ '...' : project.description|striptags }}
										</p>

										<!-- Données cachées pour la modal -->
										<div class="hidden" data-project-date="{{ project.dateCreation|date('d/m/Y') }}" data-project-description="{{ project.description|striptags }}"></div>

										{# Technologies #}
										{% if project.technologies|length > 0 %}
											<div class="flex flex-wrap gap-2 mb-4">
												{% for technology in project.technologies %}
													<span class="px-3 py-1 rounded-full text-xs font-medium flex items-center text-white backdrop-blur-sm" style="background-color: {{ technology.couleur }}20; border: 1px solid {{ technology.couleur }};">
														{{ technology.nom }}
														{% if technology.icone %}
															{{ ux_icon(technology.icone, {class: 'w-3 h-3 ml-1'}) }}
														{% endif %}
													</span>
												{% endfor %}
											</div>
										{% endif %}

										{# Actions #}
										<div class="flex justify-end items-center mt-auto mx-auto">
											<div class="flex gap-2">
												{% if project.url %}
													<a href="{{ project.url }}" target="_blank" rel="noopener noreferrer" class="btn-primary text-xs px-2 py-1 cursor-pointer">
														{{ ux_icon('lucide:external-link', {class: 'w-3 h-3 mr-1'}) }}
														Voir
													</a>
												{% endif %}

												<button class="btn-secondary text-xs px-2 py-1 cursor-pointer" data-action="click->portfolio#showProjectDetails" data-portfolio-project-id-value="{{ project.id }}">
													{{ ux_icon('lucide:info', {class: 'w-3 h-3 mr-1'}) }}
													Info
												</button>
											</div>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				{% else %}
					<div class="text-center py-20">
						<div class="glass-card optimized-blur p-12 max-w-md mx-auto">
							{{ ux_icon('lucide:folder-open', {class: 'w-16 h-16 text-gray-400 mb-6 mx-auto'}) }}
							<h3 class="text-2xl font-bold text-white mb-4">Aucun projet trouvé</h3>
							<p class="text-gray-300 mb-6">
								{% if selectedTechnology %}
									Aucun projet utilisant cette technologie pour le moment.
								{% else %}
									Aucun projet disponible pour le moment.
								{% endif %}
							</p>
							{% if selectedTechnology %}
								<a href="{{ path('app_portfolio') }}" class="btn-primary px-6 py-3">
									{{ ux_icon('lucide:arrow-left', {class: 'w-4 h-4 mr-2'}) }}
									Voir tous les projets
								</a>
							{% endif %}
						</div>
					</div>
				{% endif %}

				{# Pagination #}
				{% if totalPages > 1 %}
					<div class="mt-16 flex justify-center">
						<nav
							class="flex items-center space-x-2" aria-label="Pagination">
							{# Bouton Précédent #}
							{% if currentPage > 1 %}
								<a href="{{ path('app_portfolio', {page: currentPage - 1, technology: selectedTechnology}) }}" class="px-4 py-2 text-sm font-medium text-gray-300 bg-white/5 hover:bg-white/10 border border-white/10 rounded-lg transition-colors duration-300 flex items-center gap-2">
									{{ ux_icon('lucide:chevron-left', {class: 'w-4 h-4'}) }}
									Précédent
								</a>
							{% endif %}

							{# Pages #}
							{% for page in range(max(1, currentPage - 2), min(totalPages, currentPage + 2)) %}
								{% if page == currentPage %}
									<span class="px-4 py-2 text-sm font-medium bg-blue-600 text-white rounded-lg">
										{{ page }}
									</span>
								{% else %}
									<a href="{{ path('app_portfolio', {page: page, technology: selectedTechnology}) }}" class="px-4 py-2 text-sm font-medium text-gray-300 bg-white/5 hover:bg-white/10 border border-white/10 rounded-lg transition-colors duration-300">
										{{ page }}
									</a>
								{% endif %}
							{% endfor %}

							{# Bouton Suivant #}
							{% if currentPage < totalPages %}
								<a href="{{ path('app_portfolio', {page: currentPage + 1, technology: selectedTechnology}) }}" class="px-4 py-2 text-sm font-medium text-gray-300 bg-white/5 hover:bg-white/10 border border-white/10 rounded-lg transition-colors duration-300 flex items-center gap-2">
									Suivant
									{{ ux_icon('lucide:chevron-right', {class: 'w-4 h-4'}) }}
								</a>
							{% endif %}
						</nav>
					</div>

					{# Informations sur la pagination #}
					<div class="mt-4 text-center text-sm text-gray-400">
						Affichage de
						{{ ((currentPage - 1) * limit) + 1 }}
						à
						{{ min(currentPage * limit, totalProjects) }}
						sur
						{{ totalProjects }}
						projets
					</div>
				{% endif %}
			</div>
		</section>

		{# Modal pour les détails du projet #}
		<div id="projectModal" class="fixed inset-0 bg-black/80 backdrop-blur-sm z-50 hidden" data-portfolio-target="modal" data-action="click->portfolio#clickOutside keydown@window->portfolio#keydown">
			<div class="flex items-center justify-center min-h-screen p-4">
				<div class="glass-card optimized-blur max-w-4xl w-full max-h-[90vh] overflow-y-auto">
					<div class="p-6">
						<div class="flex justify-between items-start mb-6">
							<h2 data-portfolio-target="modalTitle" class="text-3xl font-bold text-white"></h2>
							<button data-action="click->portfolio#closeModal" class="text-gray-400 hover:text-white text-2xl transition-colors duration-300 cursor-pointer">
								{{ ux_icon('lucide:x', {class: 'w-6 h-6'}) }}
							</button>
						</div>
						<div data-portfolio-target="modalContent" class="text-gray-300"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
