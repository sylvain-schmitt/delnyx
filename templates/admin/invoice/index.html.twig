{% extends 'admin/layout/base.html.twig' %}
{% import 'admin/macros/pagination.html.twig' as pagination_macro %}

{% block title %}Factures - Administration Delnyx{% endblock %}

{% block page_title %}Factures{% endblock %}

{% block body %}
<div class="space-y-6">
    
    {# Header avec actions #}
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 scroll-animate">
        <div>
            <h1 class="text-2xl font-bold text-white">Factures</h1>
            <p class="text-white/60 mt-1">{{ total_invoices }} factures au total{% if not include_cancelled %} (hors annulées){% endif %}</p>
        </div>
        <div class="flex gap-3">
            {% if include_cancelled %}
                <a href="{{ path('admin_invoice_index') }}" class="btn-secondary flex items-center gap-2">
                    {{ ux_icon('lucide:eye-off', {class: 'w-4 h-4'}) }}
                    Masquer les annulées
                </a>
            {% else %}
                <a href="{{ path('admin_invoice_index', {include_cancelled: true}) }}" class="btn-secondary flex items-center gap-2">
                    {{ ux_icon('lucide:eye', {class: 'w-4 h-4'}) }}
                    Afficher les annulées
                </a>
            {% endif %}
            <a href="{{ path('admin_credit_note_index') }}" class="btn-secondary flex items-center gap-2">
                {{ ux_icon('lucide:file-minus', {class: 'w-4 h-4'}) }}
                Voir les avoirs
            </a>
            <a href="{{ path('admin_invoice_new') }}" class="btn-primary flex items-center gap-2">
                {{ ux_icon('lucide:file-plus', {class: 'w-4 h-4'}) }}
                Nouvelle Facture
            </a>
        </div>
    </div>

    {# Liste des factures #}
    {% if invoices|length > 0 %}
        {# Version desktop : table #}
        <div class="hidden md:block bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl overflow-hidden scroll-animate animate-delay-100">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-white/5 border-b border-white/20">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Numéro</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Client</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Date</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Échéance</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Montant TTC</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Statut</th>
                            <th class="px-6 py-4 text-right text-xs font-semibold text-white/80 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-white/10">
                        {% for invoice in invoices %}
                            <tr class="hover:bg-white/5 transition-colors duration-200">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-white">{{ invoice.numero ?? 'N/A' }}</div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm text-white">{{ invoice.client.nomComplet }}</div>
                                    <div class="text-xs text-white/60">{{ invoice.client.email }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-white">{{ invoice.dateCreation|date('d/m/Y') }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-white">{{ invoice.dateEcheance|date('d/m/Y') }}</div>
                                    {% if invoice.isEnRetard %}
                                        <div class="text-xs text-red-400">En retard ({{ invoice.joursRetard }}j)</div>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-white">{{ invoice.montantTTCFormate }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {% set status = invoice.statutEnum %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                        {% if status.value == 'draft' %}bg-gray-500/20 text-gray-300
                                        {% elseif status.value == 'issued' %}bg-blue-500/20 text-blue-300
                                        {% elseif status.value == 'sent' %}bg-purple-500/20 text-purple-300
                                        {% elseif status.value == 'paid' %}bg-green-500/20 text-green-300
                                        {% elseif status.value == 'cancelled' %}bg-gray-600/20 text-gray-400
                                        {% else %}bg-gray-500/20 text-gray-300{% endif %}">
                                        {{ status.label }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex items-center justify-end gap-2">
                                        {# Bouton Voir #}
                                        <a href="{{ path('admin_invoice_show', {id: invoice.id}) }}" 
                                           class="text-blue-400 hover:text-blue-300 transition-colors duration-200"
                                           title="Voir">
                                            {{ ux_icon('lucide:eye', {class: 'w-4 h-4'}) }}
                                        </a>
                                        
                                        {# Bouton Modifier : visible si DRAFT #}
                                        {% if invoice.statutEnum.value == 'draft' %}
                                            <a href="{{ path('admin_invoice_edit', {id: invoice.id}) }}" 
                                               class="text-yellow-400 hover:text-yellow-300 transition-colors duration-200"
                                               title="Modifier">
                                                {{ ux_icon('lucide:edit', {class: 'w-4 h-4'}) }}
                                            </a>
                                        {% endif %}
                                        
                                        {# Bouton Émettre : visible si DRAFT #}
                                        {% if invoice.statutEnum.value == 'draft' %}
                                            <form action="{{ path('admin_invoice_issue', {id: invoice.id}) }}" method="POST" class="inline" data-controller="confirm-modal" data-confirm-modal-message="⚠️ ATTENTION : Émettre cette facture la rend immuable. Continuer ?">
                                                <input type="hidden" name="_token" value="{{ csrf_token('invoice_issue_' ~ invoice.id) }}">
                                                <button type="submit" class="text-blue-400 hover:text-blue-300 transition-colors duration-200" title="Émettre">
                                                    {{ ux_icon('lucide:send', {class: 'w-4 h-4'}) }}
                                                </button>
                                            </form>
                                        {% endif %}
                                        
                                        {# Bouton Envoyer : visible si ISSUED ou PAID (pas si déjà SENT) #}
                                        {% if invoice.statutEnum.value in ['issued', 'paid'] %}
                                            <form action="{{ path('admin_invoice_send', {id: invoice.id}) }}" method="POST" class="inline" data-controller="confirm-modal" data-confirm-modal-message="Envoyer cette facture au client ?">
                                                <input type="hidden" name="_token" value="{{ csrf_token('invoice_send_' ~ invoice.id) }}">
                                                <input type="hidden" name="channel" value="email">
                                                <button type="submit" class="text-blue-400 hover:text-blue-300 transition-colors duration-200" title="Envoyer">
                                                    {{ ux_icon('lucide:send', {class: 'w-4 h-4'}) }}
                                                </button>
                                            </form>
                                        {% endif %}

                                        {# Bouton Marquer comme payée : visible si ISSUED ou SENT #}
                                        {% if invoice.statutEnum.value in ['issued', 'sent'] %}
                                            <form action="{{ path('admin_invoice_mark_paid', {id: invoice.id}) }}" method="POST" class="inline" data-controller="confirm-modal" data-confirm-modal-message="Marquer cette facture comme payée ?">
                                                <input type="hidden" name="_token" value="{{ csrf_token('invoice_mark_paid_' ~ invoice.id) }}">
                                                <button type="submit" class="text-green-400 hover:text-green-300 transition-colors duration-200" title="Marquer comme payée">
                                                    {{ ux_icon('lucide:check-circle', {class: 'w-4 h-4'}) }}
                                                </button>
                                            </form>
                                        {% endif %}
                                        
                                        {# Bouton Créer un avoir : visible si ISSUED, SENT ou PAID #}
                                        {% if invoice.statutEnum.value in ['issued', 'sent', 'paid'] %}
                                            <a href="{{ path('admin_credit_note_new', {invoice_id: invoice.id}) }}" 
                                               class="text-blue-400 hover:text-blue-300 transition-colors duration-200"
                                               title="Créer un avoir">
                                                {{ ux_icon('lucide:file-minus', {class: 'w-4 h-4'}) }}
                                            </a>
                                        {% endif %}
                                        
                                        {# Bouton Annuler : visible si DRAFT uniquement #}
                                        {% if invoice.statutEnum.value == 'draft' %}
                                            <form action="{{ path('admin_invoice_cancel', {id: invoice.id}) }}" method="POST" class="inline" data-action="submit->confirm-modal#open" data-confirm-modal-message="⚠️ ATTENTION : Annuler cette facture la marquera comme annulée. Continuer ?">
                                                <input type="hidden" name="_token" value="{{ csrf_token('invoice_cancel_' ~ invoice.id) }}">
                                                <button type="submit" class="text-red-400 hover:text-red-300 transition-colors duration-200" title="Annuler">
                                                    {{ ux_icon('lucide:x-circle', {class: 'w-4 h-4'}) }}
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {# Version mobile : cards #}
        <div class="md:hidden space-y-4 scroll-animate animate-delay-100">
            {% for invoice in invoices %}
                <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-4">
                    <div class="flex items-start justify-between mb-3">
                        <div class="flex-1">
                            <div class="text-sm font-medium text-white mb-1">{{ invoice.numero ?? 'N/A' }}</div>
                            <div class="text-sm text-white">{{ invoice.client.nomComplet }}</div>
                            <div class="text-xs text-white/60">{{ invoice.client.email }}</div>
                        </div>
                        <div class="flex items-center gap-2 ml-4 flex-wrap">
                            {# Bouton Voir #}
                            <a href="{{ path('admin_invoice_show', {id: invoice.id}) }}" 
                               class="text-blue-400 hover:text-blue-300 transition-colors duration-200 p-2"
                               title="Voir">
                                {{ ux_icon('lucide:eye', {class: 'w-5 h-5'}) }}
                            </a>
                            
                            {# Bouton Modifier : visible si DRAFT #}
                            {% if invoice.statutEnum.value == 'draft' %}
                                <a href="{{ path('admin_invoice_edit', {id: invoice.id}) }}" 
                                   class="text-yellow-400 hover:text-yellow-300 transition-colors duration-200 p-2"
                                   title="Modifier">
                                    {{ ux_icon('lucide:edit', {class: 'w-5 h-5'}) }}
                                </a>
                            {% endif %}
                            
                            {# Bouton Émettre : visible si DRAFT #}
                            {% if invoice.statutEnum.value == 'draft' %}
                                <form action="{{ path('admin_invoice_issue', {id: invoice.id}) }}" method="POST" class="inline" data-controller="confirm-modal" data-confirm-modal-message="⚠️ ATTENTION : Émettre cette facture la rend immuable. Continuer ?">
                                    <input type="hidden" name="_token" value="{{ csrf_token('invoice_issue_' ~ invoice.id) }}">
                                    <button type="submit" class="text-blue-400 hover:text-blue-300 transition-colors duration-200 p-2" title="Émettre">
                                        {{ ux_icon('lucide:send', {class: 'w-5 h-5'}) }}
                                    </button>
                                </form>
                            {% endif %}
                            
                            {# Bouton Envoyer : visible si ISSUED ou PAID (pas si déjà SENT) #}
                            {% if invoice.statutEnum.value in ['issued', 'paid'] %}
                                <form action="{{ path('admin_invoice_send', {id: invoice.id}) }}" method="POST" class="inline" data-controller="confirm-modal" data-confirm-modal-message="Envoyer cette facture au client ?">
                                    <input type="hidden" name="_token" value="{{ csrf_token('invoice_send_' ~ invoice.id) }}">
                                    <input type="hidden" name="channel" value="email">
                                    <button type="submit" class="text-blue-400 hover:text-blue-300 transition-colors duration-200 p-2" title="Envoyer">
                                        {{ ux_icon('lucide:send', {class: 'w-5 h-5'}) }}
                                    </button>
                                </form>
                            {% endif %}

                            {# Bouton Marquer comme payée : visible si ISSUED ou SENT #}
                            {% if invoice.statutEnum.value in ['issued', 'sent'] %}
                                <form action="{{ path('admin_invoice_mark_paid', {id: invoice.id}) }}" method="POST" class="inline" data-controller="confirm-modal" data-confirm-modal-message="Marquer cette facture comme payée ?">
                                    <input type="hidden" name="_token" value="{{ csrf_token('invoice_mark_paid_' ~ invoice.id) }}">
                                    <button type="submit" class="text-green-400 hover:text-green-300 transition-colors duration-200 p-2" title="Marquer comme payée">
                                        {{ ux_icon('lucide:check-circle', {class: 'w-5 h-5'}) }}
                                    </button>
                                </form>
                            {% endif %}
                            
                            {# Bouton Créer un avoir : visible si ISSUED, SENT ou PAID #}
                            {% if invoice.statutEnum.value in ['issued', 'sent', 'paid'] %}
                                <a href="{{ path('admin_credit_note_new', {invoice_id: invoice.id}) }}" 
                                   class="text-blue-400 hover:text-blue-300 transition-colors duration-200 p-2"
                                   title="Créer un avoir">
                                    {{ ux_icon('lucide:file-minus', {class: 'w-5 h-5'}) }}
                                </a>
                            {% endif %}
                            
                            {# Bouton Annuler : visible si DRAFT uniquement #}
                            {% if invoice.statutEnum.value == 'draft' %}
                                <form action="{{ path('admin_invoice_cancel', {id: invoice.id}) }}" method="POST" class="inline" data-action="submit->confirm-modal#open" data-confirm-modal-message="⚠️ ATTENTION : Annuler cette facture la marquera comme annulée. Continuer ?">
                                    <input type="hidden" name="_token" value="{{ csrf_token('invoice_cancel_' ~ invoice.id) }}">
                                    <button type="submit" class="text-red-400 hover:text-red-300 transition-colors duration-200 p-2" title="Annuler">
                                        {{ ux_icon('lucide:x-circle', {class: 'w-5 h-5'}) }}
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="space-y-2 text-sm">
                        <div class="flex justify-between">
                            <span class="text-white/60">Date</span>
                            <span class="text-white">{{ invoice.dateCreation|date('d/m/Y') }}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-white/60">Échéance</span>
                            <span class="text-white {% if invoice.isEnRetard %}text-red-400{% endif %}">
                                {{ invoice.dateEcheance|date('d/m/Y') }}
                                {% if invoice.isEnRetard %}
                                    <span class="text-xs">({{ invoice.joursRetard }}j de retard)</span>
                                {% endif %}
                            </span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-white/60">Montant TTC</span>
                            <span class="text-white font-medium">{{ invoice.montantTTCFormate }}</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-white/60">Statut</span>
                            {% set status = invoice.statutEnum %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                {% if status.value == 'draft' %}bg-gray-500/20 text-gray-300
                                {% elseif status.value == 'issued' %}bg-blue-500/20 text-blue-300
                                {% elseif status.value == 'sent' %}bg-purple-500/20 text-purple-300
                                {% elseif status.value == 'paid' %}bg-green-500/20 text-green-300
                                {% elseif status.value == 'cancelled' %}bg-gray-600/20 text-gray-400
                                {% else %}bg-gray-500/20 text-gray-300{% endif %}">
                                {{ status.label }}
                            </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Pagination #}
        {{ pagination_macro.render(current_page, total_pages, 'admin_invoice_index', include_cancelled ? {include_cancelled: true} : {}, 15, total_invoices) }}
    {% else %}
        {# État vide #}
        <div class="text-center py-20 scroll-animate">
            <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-12 max-w-md mx-auto">
                {{ ux_icon('lucide:receipt', {class: 'w-16 h-16 text-gray-400 mb-6 mx-auto'}) }}
                <h3 class="text-2xl font-bold text-white mb-4">Aucune facture</h3>
                <p class="text-gray-300 mb-6">
                    Commencez par créer votre première facture ou générez-en une depuis un devis signé.
                </p>
                <a href="{{ path('admin_invoice_new') }}" class="btn-primary">
                    {{ ux_icon('lucide:file-plus', {class: 'w-4 h-4 mr-2'}) }}
                    Créer une facture
                </a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}

