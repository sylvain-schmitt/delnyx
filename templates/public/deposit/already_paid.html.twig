{% extends 'public/layout/base.html.twig' %}

{% block title %}Accompte déjà payé - Devis
	{{ deposit.quote.numero }}
{% endblock %}

{% block body %}
	<div class="max-w-lg mx-auto text-center">
		<div class="mb-8">
			<div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-blue-500 to-cyan-600 rounded-full mb-4">
				<svg class="w-10 h-10 text-white" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
				</svg>
			</div>
			<h1 class="text-2xl font-bold text-white mb-2">Accompte déjà traité</h1>
			<p class="text-white/60">Cet accompte a déjà été payé</p>
		</div>

		<div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl p-6">
			<div class="space-y-4">
				<div class="flex justify-between items-center">
					<span class="text-white/60">Devis</span>
					<span class="text-white font-medium">{{ deposit.quote.numero }}</span>
				</div>
				<div class="flex justify-between items-center">
					<span class="text-white/60">Montant</span>
					<span class="text-white font-bold">{{ deposit.formattedAmount }}</span>
				</div>
				<div class="flex justify-between items-center">
					<span class="text-white/60">Statut</span>
					<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
														                    {% if deposit.status.value == 'paid' %}bg-green-500/20 text-green-300
														                    {% elseif deposit.status.value == 'refunded' %}bg-blue-500/20 text-blue-300
														                    {% else %}bg-gray-500/20 text-gray-300{% endif %}">
						{{ deposit.status.label }}
					</span>
				</div>
				{% if deposit.paidAt %}
					<div class="flex justify-between items-center">
						<span class="text-white/60">Payé le</span>
						<span class="text-white">{{ deposit.paidAt|date('d/m/Y à H:i') }}</span>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
