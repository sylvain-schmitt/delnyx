{% extends 'pdf/base.html.twig' %}

{% block content %}
	<!-- En-tête -->
	{% if quote.statut.value == 'signed' %}
		<div class="watermark watermark-signed">SIGNÉ</div>
	{% endif %}
	<div class="header">
		<div class="company-info">
			<div class="company-logo">
				{% if logo_base64 %}
					<img src="{{ logo_base64 }}" alt="{{ company.raisonSociale ?? 'Logo' }}" style="height: 40px; width: auto;">
				{% else %}
					<span style="font-size: 24px; font-weight: bold; color: #2563eb; letter-spacing: 2px;">{{ company.raisonSociale ?? 'ENTREPRISE' }}</span>
				{% endif %}
			</div>
			<div class="company-details">
				{% if company %}
					<strong>{{ company.raisonSociale }}</strong><br>
					{{ company.formeJuridique ?? 'Micro-entrepreneur' }}
					{% if company.codeAPE %}
						• APE:
						{{ company.codeAPE }}
					{% endif %}<br>
					{{ company.adresse }}<br>
					{{ company.codePostal }}
					{{ company.ville }}<br>
					{% if company.siret %}SIRET:
						{{ company.siret }}<br>
					{% endif %}
					{% if company.email %}Email:
						{{ company.email }}<br>
					{% endif %}
					{% if company.telephone %}Tél:
						{{ company.telephone }}
					{% endif %}
				{% else %}
					<strong>Entreprise</strong><br>
					Informations non disponibles
				{% endif %}
			</div>
		</div>
		<div class="document-info">
			<div class="document-title">DEVIS</div>
			<div class="document-number">{{ quote.numero }}</div>
			<div class="document-date">
				Date:
				{{ quote.dateCreation|date('d/m/Y') }}<br>
				Validité:
				{{ quote.dateValidite|date('d/m/Y') }}
			</div>
		</div>
	</div>

	<!-- Informations client -->
	<div class="client-section">
		<div class="client-info">
			<div class="section-title">Client</div>
			{% if client.companyName %}
				<div class="client-name">{{ client.companyName }}</div>
				<div class="client-details">
					<strong>{{ client.prenom }}
						{{ client.nom }}</strong><br>
				{% else %}
					<div class="client-name">{{ client.prenom }}
						{{ client.nom }}</div>
					<div class="client-details">
					{% endif %}
					{% if client.email %}
						{{ client.email }}<br>
					{% endif %}
					{% if client.telephone %}
						{{ client.telephone }}<br>
					{% endif %}
					{% if client.adresse %}
						{{ client.adresse }}<br>
						{{ client.codePostal }}
						{{ client.ville }}
					{% endif %}
					{% if client.siret %}<br>SIRET:
						{{ client.siret }}
					{% endif %}
				</div>
			</div>
		</div>

		<!-- Conditions -->
		{% if quote.conditionsPaiement or quote.delaiLivraison %}
			<div class="conditions-section no-break">
				{% if quote.conditionsPaiement %}
					<div class="conditions-item">
						<strong>Conditions de paiement:</strong>
						{{ quote.conditionsPaiement }}
					</div>
				{% endif %}
				{% if quote.delaiLivraison %}
					<div class="conditions-item">
						<strong>Délai de livraison:</strong>
						{{ quote.delaiLivraison }}
					</div>
				{% endif %}
			</div>
		{% endif %}

		<!-- Tableau des services -->
		<table class="services-table">
			<thead>
				<tr>
					<th style="width: 50%;">Description</th>
					<th style="width: 10%;" class="text-center">Quantité</th>
					<th style="width: 15%;" class="text-right">Prix unitaire</th>
					{% if company and company.isTvaEnabled() %}
						<th style="width: 10%;" class="text-right">TVA</th>
					{% endif %}
					<th style="width: 15%;" class="text-right">Total HT</th>
				</tr>
			</thead>
			<tbody>
				{% for line in quote.lines %}
					<tr>
						<td>
							<strong>{{ line.description }}</strong>
						</td>
						<td class="text-center">{{ line.quantity }}</td>
						<td class="text-right">
							{{ line.unitPrice|number_format(2, ',', ' ') }}
							€
							{% if line.subscriptionMode == 'monthly' %}
								<span style="font-size: 0.8em; color: #666;">/ mois</span>
							{% elseif line.subscriptionMode == 'yearly' %}
								<span style="font-size: 0.8em; color: #666;">/ an</span>
							{% endif %}
						</td>
						{% if company and company.isTvaEnabled() %}
							<td class="text-right">{{ line.tvaRate }}
								%</td>
						{% endif %}
						<td class="text-right">{{ line.totalHt|number_format(2, ',', ' ') }}
							€</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<!-- Totaux -->
		<div class="totals no-break">
			<table class="totals-table">
				<tr>
					<td class="label">Total HT:</td>
					<td class="amount">{{ quote.montantHTFormate }}</td>
				</tr>
				{% if company and company.isTvaEnabled() and quote.montantTVA > 0 %}
					<tr>
						<td class="label">Total TVA ({{ quote.tauxTVA }}%):</td>
						<td class="amount">{{ quote.montantTVAFormatted ?? (quote.montantTVA|number_format(2, ',', ' ') ~ ' €') }}</td>
					</tr>
				{% endif %}
				<tr class="total-row">
					<td class="label">Total TTC:</td>
					<td class="amount">{{ quote.montantTTCFormate }}</td>
				</tr>
				{% if quote.acomptePourcentage > 0 %}
					<tr style="border-top: 1px dashed #ccc; margin-top: 5px;">
						<td class="label" style="padding-top: 8px; color: #666;">Acompte à la signature ({{ quote.acomptePourcentage|number_format(0) }}%) :</td>
						<td class="amount" style="padding-top: 8px; color: #2563eb; font-weight: bold;">{{ quote.montantAcompteFormate }}</td>
					</tr>
					<tr>
						<td class="label" style="color: #666;">Solde à la livraison ({{ (100 - quote.acomptePourcentage)|number_format(0) }}%) :</td>
						<td class="amount" style="color: #059669; font-weight: bold;">{{ ((quote.montantTTC * (100 - quote.acomptePourcentage) / 100))|number_format(2, ',', ' ') }}
							€</td>
					</tr>
				{% endif %}
			</table>
		</div>

		{% if quote.notes %}
			<div class="notes-section no-break">
				<strong>Notes:</strong><br>
				{{ quote.notes|nl2br }}
			</div>
		{% endif %}

		<!-- Mentions légales -->
		<div class="legal-mentions no-break">
			<strong>Mentions légales:</strong><br>
			{% if company %}
				{{ company.raisonSociale }}
				-
				{{ company.formeJuridique ?? 'Micro-entrepreneur' }}
				{% if company.codeAPE %}
					(APE:
					{{ company.codeAPE }})
				{% endif %}
				{% if company.siret %}
					- SIRET:
					{{ company.siret }}
				{% endif %}<br>
				{% if company.assuranceRCPro %}
					RC Pro:
					{{ company.assuranceRCPro }}<br>
				{% endif %}
			{% endif %}
			Devis valable jusqu'au
			{{ quote.dateValidite|date('d/m/Y') }}.<br>
			<strong>Pénalités de retard:</strong>
			À défaut de paiement, pénalité de 10,00% par an ou 3 fois le taux d'intérêt légal.<br>
			<strong>Escompte:</strong>
			Pas d'escompte pour paiement anticipé.<br>
			<em>Devis reçu avant l'exécution des travaux.</em><br>
			{% if company and not company.isTvaEnabled() %}
				<strong>Micro-entrepreneur:</strong>
				TVA non applicable selon l'article 293 B du Code Général des Impôts.
			{% endif %}
		</div>

		<!-- Pied de page -->
		<div class="footer no-break">
			{% if company %}
				<strong>{{ company.raisonSociale }}</strong>
				{% if company.email or company.telephone %}
					|
					{% if company.email %}
						{{ company.email }}
					{% endif %}
					{% if company.email and company.telephone %}
						|
					{% endif %}
					{% if company.telephone %}
						{{ company.telephone }}
					{% endif %}
				{% endif %}
			{% endif %}
		</div>
	{% endblock %}
