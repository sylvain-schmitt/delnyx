{% extends 'public/layout/base.html.twig' %}

{% block title %}Abonnement annulé - Delnyx
{% endblock %}

{% block body %}
	<div class="max-w-xl mx-auto py-12">
		<div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-8 text-center">
			<div class="w-16 h-16 bg-green-500/20 text-green-400 rounded-full flex items-center justify-center mx-auto mb-6">
				{{ ux_icon('lucide:check-circle-2', {class: 'w-8 h-8'}) }}
			</div>

			<h1 class="text-3xl font-bold text-white mb-4">Abonnement annulé</h1>
			<p class="text-white/70 mb-8">
				Votre demande d'annulation pour l'abonnement
				<br>
				<strong class="text-white">{{ subscription.label }}</strong><br>
				a bien été enregistrée.
			</p>

			<div class="bg-gray-800/50 border border-white/10 rounded-lg p-6 mb-8">
				<p class="text-white/80 text-sm mb-2">L'abonnement restera actif jusqu'au :</p>
				<p class="text-2xl font-bold text-white">{{ subscription.currentPeriodEnd|date('d/m/Y') }}</p>
			</div>

			<p class="text-white/60 text-sm mb-8">
				Une confirmation a été envoyée à notre équipe technique. Nous vous remercions de votre confiance.
			</p>

			<a href="/" class="inline-block py-3 px-8 bg-white/10 hover:bg-white/20 text-white font-medium rounded-lg transition-colors border border-white/20">
				Retour à l'accueil
			</a>
		</div>
	</div>
{% endblock %}
