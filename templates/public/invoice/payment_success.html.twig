{% extends 'public/layout/base.html.twig' %}

{% block title %}Paiement réussi - Facture
	{{ invoice.numero }}
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 py-12 px-4 sm:px-6 lg:px-8 flex items-center justify-center">
		<div class="max-w-md w-full bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl p-8 text-center">
			<div class="mb-6">
				<div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-500/20 border border-green-500/50 mb-4">
					<svg class="h-8 w-8 text-green-400" fill="none" viewbox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
					</svg>
				</div>
				<h2 class="text-2xl font-bold text-white mb-2">Paiement réussi !</h2>
				<p class="text-white/60">
					Merci, le paiement de la facture
					<strong>{{ invoice.numero }}</strong>
					a bien été enregistré.
				</p>
			</div>

			<div class="bg-white/5 rounded-lg p-4 mb-8 border border-white/10">
				<div class="flex justify-between items-center mb-2">
					<span class="text-white/60">Montant payé</span>
					<span class="text-xl font-bold text-white">{{ invoice.montantTTCFormate }}</span>
				</div>
				<div class="flex justify-between items-center">
					<span class="text-white/60">Date</span>
					<span class="text-white">{{ "now"|date("d/m/Y H:i") }}</span>
				</div>
			</div>

			<div class="flex flex-col gap-3">
				<a href="{{ path('public_invoice_view', { id: invoice.id, expires: app.request.query.get('expires'), signature: app.request.query.get('signature') }) }}" class="w-full px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg text-white font-semibold transition-colors">
					Voir la facture
				</a>

				<a href="{{ path('public_invoice_download', { id: invoice.id, expires: app.request.query.get('expires'), signature: app.request.query.get('signature') }) }}" class="w-full px-6 py-3 bg-white/10 hover:bg-white/20 border border-white/20 rounded-lg text-white font-semibold transition-colors">
					Télécharger le PDF
				</a>
			</div>
		</div>
	</div>
{% endblock %}
