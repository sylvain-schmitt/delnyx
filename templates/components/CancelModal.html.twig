{# Modal d'annulation de document avec raisons prédéfinies #}
{# Ce modal est réutilisable et récupère ses données via le controller Stimulus cancel-modal #}

<div data-controller="cancel-modal" 
     class="fixed inset-0 z-50 hidden overflow-y-auto bg-black/50 backdrop-blur-sm flex items-center justify-center p-4"
     data-action="click->cancel-modal#close">
    
    <div class="bg-gradient-to-br from-slate-800 to-slate-900 rounded-2xl shadow-2xl w-full max-w-md mx-auto border border-white/10 transform transition-all" 
         data-action="click->cancel-modal#stopPropagate">
        
        {# Header #}
        <div class="px-6 py-4 border-b border-white/10">
            <div class="flex items-center justify-between">
                <h3 class="text-lg font-semibold text-white flex items-center gap-2" data-cancel-modal-target="title">
                    {{ ux_icon('lucide:alert-triangle', {class: 'w-5 h-5 text-amber-400'}) }}
                    Confirmer l'annulation
                </h3>
                <button type="button" 
                        class="text-white/60 hover:text-white transition-colors"
                        data-action="click->cancel-modal#close">
                    {{ ux_icon('lucide:x', {class: 'w-5 h-5'}) }}
                </button>
            </div>
        </div>

        {# Body #}
        <form data-cancel-modal-target="form" method="POST" action="" class="px-6 py-4 space-y-4" data-action="submit->cancel-modal#validateForm">
            <input type="hidden" name="_token" data-cancel-modal-target="csrfToken">
            <input type="hidden" name="documentType" data-cancel-modal-target="documentType">
            
            {# Message d'avertissement #}
            <div class="bg-amber-500/10 border border-amber-500/20 rounded-lg p-4">
                <p class="text-sm text-amber-200" data-cancel-modal-target="message">
                    {{ ux_icon('lucide:info', {class: 'w-4 h-4 inline mr-1'}) }}
                    Êtes-vous sûr de vouloir annuler ce document ?
                </p>
            </div>

            {# Dropdown de raisons #}
            <div class="space-y-2">
                <label for="cancel_reason" class="block text-sm font-medium text-white/90">
                    Raison de l'annulation <span class="text-red-400">*</span>
                </label>
                <select id="cancel_reason" 
                        name="reason" 
                        required
                        class="w-full px-4 py-2.5 bg-slate-700/50 border border-white/10 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500/50 transition-all" 
                        data-cancel-modal-target="reasonSelect" 
                        data-action="change->cancel-modal#toggleOtherReason">
                    <option value="">-- Sélectionnez une raison --</option>
                    {# Les options seront générées dynamiquement par le controller Stimulus #}
                </select>
            </div>

            {# Champ raison personnalisée (caché par défaut) #}
            <div data-cancel-modal-target="otherReasonContainer" class="space-y-2 hidden">
                <label for="other_reason_text" class="block text-sm font-medium text-white/90">
                    Précisez la raison <span class="text-red-400">*</span>
                </label>
                <textarea id="other_reason_text" 
                          name="other_reason" 
                          rows="3"
                          placeholder="Décrivez la raison de l'annulation..."
                          class="w-full px-4 py-2.5 bg-slate-700/50 border border-white/10 rounded-lg text-white placeholder-white/40 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500/50 transition-all resize-none" 
                          data-cancel-modal-target="otherReasonText"></textarea>
            </div>

            {# Actions #}
            <div class="flex items-center justify-end gap-3 pt-4">
                <button type="button" 
                        class="px-4 py-2 text-sm font-medium text-white/70 hover:text-white transition-colors"
                        data-action="click->cancel-modal#close">
                    Annuler
                </button>
                <button type="submit" 
                        class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-all flex items-center gap-2 shadow-lg shadow-red-500/20">
                    {{ ux_icon('lucide:trash-2', {class: 'w-4 h-4'}) }}
                    Confirmer l'annulation
                </button>
            </div>
        </form>
    </div>
</div>

