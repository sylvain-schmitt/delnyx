{# Sidebar Navigation - Glassmorphique #}
<aside class="fixed inset-y-0 left-0 z-50 w-64 bg-white/10 backdrop-blur-xl border-r border-white/20 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out" 
       id="sidebar" 
       data-controller="sidebar">
    
    {# Logo et Brand #}
    <div class="flex items-center justify-between h-16 px-6 border-b border-white/20">
        <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-500 rounded-lg flex items-center justify-center">
                <span class="text-white font-bold text-sm">DX</span>
            </div>
            <span class="text-white font-semibold text-lg">Delnyx</span>
        </div>
        
        {# Mobile Close Button #}
        <button class="lg:hidden text-white/70 hover:text-white transition-colors duration-200"
                data-action="click->sidebar#toggle">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
    </div>
    
    {# Navigation Menu #}
    <nav class="flex-1 px-4 py-6 space-y-2">
        
        {# Dashboard #}
        <a href="{{ path('admin_dashboard') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg text-white/80 hover:text-white hover:bg-white/10 transition-all duration-200 group
           {{ app.request.attributes.get('_route') == 'admin_dashboard' ? 'bg-white/20 text-white' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"/>
            </svg>
            <span class="font-medium">Dashboard</span>
        </a>
        
        {# Clients #}
        <a href="{{ path('admin_client_index') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg text-white/80 hover:text-white hover:bg-white/10 transition-all duration-200 group
           {{ app.request.attributes.get('_route') starts with 'admin_client' ? 'bg-white/20 text-white' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            <span class="font-medium">Clients</span>
        </a>
        
        {# Devis #}
        <a href="{{ path('admin_devis_index') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg text-white/80 hover:text-white hover:bg-white/10 transition-all duration-200 group
           {{ app.request.attributes.get('_route') starts with 'admin_devis' ? 'bg-white/20 text-white' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <span class="font-medium">Devis</span>
        </a>
        
        {# Factures #}
        <a href="{{ path('admin_facture_index') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg text-white/80 hover:text-white hover:bg-white/10 transition-all duration-200 group
           {{ app.request.attributes.get('_route') starts with 'admin_facture' ? 'bg-white/20 text-white' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
            <span class="font-medium">Factures</span>
        </a>
        
        {# Avenants #}
        <a href="{{ path('admin_avenant_index') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg text-white/80 hover:text-white hover:bg-white/10 transition-all duration-200 group
           {{ app.request.attributes.get('_route') starts with 'admin_avenant' ? 'bg-white/20 text-white' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            <span class="font-medium">Avenants</span>
        </a>
        
        {# Tarifs #}
        <a href="{{ path('admin_tarif_index') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg text-white/80 hover:text-white hover:bg-white/10 transition-all duration-200 group
           {{ app.request.attributes.get('_route') starts with 'admin_tarif' ? 'bg-white/20 text-white' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
            </svg>
            <span class="font-medium">Tarifs</span>
        </a>
        
        {# Séparateur #}
        <div class="border-t border-white/20 my-4"></div>
        
        {# Portfolio #}
        <a href="{{ path('admin_project_index') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg text-white/80 hover:text-white hover:bg-white/10 transition-all duration-200 group
           {{ app.request.attributes.get('_route') starts with 'admin_project' ? 'bg-white/20 text-white' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
            <span class="font-medium">Portfolio</span>
        </a>
        
        {# Technologies #}
        <a href="{{ path('admin_technology_index') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg text-white/80 hover:text-white hover:bg-white/10 transition-all duration-200 group
           {{ app.request.attributes.get('_route') starts with 'admin_technology' ? 'bg-white/20 text-white' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m-4 16l-4-16m4 16l6-6m-6 6l-6-6"/>
            </svg>
            <span class="font-medium">Technologies</span>
        </a>
        
    </nav>
    
    {# User Info & Logout #}
    <div class="border-t border-white/20 p-4">
        <div class="flex items-center space-x-3 mb-4">
            <div class="w-8 h-8 bg-gradient-to-br from-green-500 to-blue-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm">
                    {{ app.user.email|first|upper }}
                </span>
            </div>
            <div class="flex-1 min-w-0">
                <p class="text-white font-medium text-sm truncate">{{ app.user.email }}</p>
                <p class="text-white/60 text-xs">Administrateur</p>
            </div>
        </div>
        
        <a href="{{ path('app_logout') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg text-white/80 hover:text-white hover:bg-white/10 transition-all duration-200 group">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
            </svg>
            <span class="font-medium">Déconnexion</span>
        </a>
    </div>
</aside>

{# Mobile Overlay #}
<div class="fixed inset-0 z-40 bg-black/50 backdrop-blur-sm lg:hidden hidden" 
     id="sidebar-overlay" 
     data-action="click->sidebar#close"></div>
