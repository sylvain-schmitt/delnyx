{% extends 'public/layout/base.html.twig' %}

{% block title %}Devis
	{{ quote.numero }}
	- Delnyx
{% endblock %}

{% block body %}
	<div
		class="max-w-4xl mx-auto">
		{# En-t√™te du document #}
		<div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-8 mb-6">
			<div class="flex items-start justify-between mb-6">
				<div>
					<h1 class="text-3xl font-bold text-white mb-2">Devis</h1>
					<p class="text-xl text-white/80">{{ quote.numero }}</p>
				</div>
				<div class="text-right">
					{% set status = quote.statut %}
					<span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium
														                    {% if status.value == 'draft' %}bg-gray-500/20 text-gray-300
														                    {% elseif status.value == 'issued' %}bg-blue-500/20 text-blue-300
														                    {% elseif status.value == 'sent' %}bg-purple-500/20 text-purple-300
														                    {% elseif status.value == 'signed' %}bg-green-500/20 text-green-300
														                    {% elseif status.value == 'refused' %}bg-red-500/20 text-red-300
														                    {% elseif status.value == 'expired' %}bg-yellow-500/20 text-yellow-300
														                    {% else %}bg-gray-500/20 text-gray-300{% endif %}">
						{{ status.label }}
					</span>
				</div>
			</div>

			{# Informations client #}
			<div class="grid md:grid-cols-2 gap-6 mb-6">
				<div>
					<h2 class="text-sm font-semibold text-white/60 uppercase mb-2">Client</h2>
					<p class="text-white font-medium">{{ quote.client.nomComplet }}</p>
					{% if quote.client.email %}
						<p class="text-white/80 text-sm">{{ quote.client.email }}</p>
					{% endif %}
					{% if quote.client.telephone %}
						<p class="text-white/80 text-sm">{{ quote.client.telephone }}</p>
					{% endif %}
				</div>
				<div>
					<h2 class="text-sm font-semibold text-white/60 uppercase mb-2">Informations</h2>
					<p class="text-white/80 text-sm">Date de cr√©ation :
						{{ quote.dateCreation|date('d/m/Y') }}</p>
					{% if quote.dateValidite %}
						<p class="text-white/80 text-sm">Valide jusqu'au :
							{{ quote.dateValidite|date('d/m/Y') }}</p>
					{% endif %}
				</div>
			</div>

			{# Lignes du devis #}
			<div class="overflow-x-auto">
				<table class="w-full">
					<thead>
						<tr class="border-b border-white/20">
							<th class="px-4 py-3 text-left text-xs font-semibold text-white/80 uppercase">Description</th>
							<th class="px-4 py-3 text-right text-xs font-semibold text-white/80 uppercase">Qt√©</th>
							<th class="px-4 py-3 text-right text-xs font-semibold text-white/80 uppercase">P.U. HT</th>
							<th class="px-4 py-3 text-right text-xs font-semibold text-white/80 uppercase">Total HT</th>
						</tr>
					</thead>
					<tbody class="divide-y divide-white/10">
						{% for line in quote.lines %}
							<tr>
								<td class="px-4 py-3 text-white">
									<span class="block">{{ line.description }}</span>
									{% if line.subscriptionMode %}
										<span class="inline-flex items-center rounded-md bg-blue-500/20 px-2 py-1 text-xs font-medium text-blue-300 ring-1 ring-inset ring-blue-500/30 mt-1">
											{{ line.subscriptionMode == 'monthly' ? 'Abonnement Mensuel' : 'Abonnement Annuel' }}
										</span>
									{% endif %}
								</td>
								<td class="px-4 py-3 text-right text-white/80">{{ line.quantity }}</td>
								<td class="px-4 py-3 text-right text-white/80">
									{{ (line.unitPrice|number_format(2, ',', ' ')) ~ ' ‚Ç¨' }}
									{% if line.subscriptionMode == 'monthly' %}
										<span class="text-xs text-white/60">/ mois</span>
									{% elseif line.subscriptionMode == 'yearly' %}
										<span class="text-xs text-white/60">/ an</span>
									{% endif %}
								</td>
								<td class="px-4 py-3 text-right text-white font-medium">{{ line.totalHtFormatted }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>

			{# Totaux #}
			<div class="flex justify-end mt-6">
				<div class="w-full md:w-1/2 space-y-2">
					<div class="flex justify-between text-white/80">
						<span>Total HT</span>
						<span class="font-medium">{{ quote.montantHTFormate }}</span>
					</div>
					<div class="flex justify-between text-white/80">
						<span>TVA</span>
						<span class="font-medium">{{ quote.montantTVAFormate }}</span>
					</div>
					<div class="flex justify-between text-xl font-bold text-white pt-2 border-t border-white/20">
						<span>Total TTC</span>
						<span>{{ quote.montantTTCFormate }}</span>
					</div>

					{# Conditions de paiement initiales #}
					{% if quote.acomptePourcentage > 0 and quote.totalPaidDeposits == 0 %}
						<div class="pt-4 mt-3 border-t border-green-500/30">
							<p class="text-sm text-green-400 font-semibold mb-2">üí∞ Conditions de paiement :</p>
							<div class="flex justify-between text-green-400 text-sm">
								<span>Acompte
									{{ quote.acomptePourcentage|number_format(0) }}% √† la signature</span>
								<span class="font-bold">{{ quote.acompteFormatted }}</span>
							</div>
							<div class="flex justify-between text-white/60 text-sm mt-1">
								<span>Solde
									{{ (100 - quote.acomptePourcentage)|number_format(0) }}% √† la livraison</span>
								<span>{{ quote.soldeApresAcompteFormatted }}</span>
							</div>
						</div>
					{% endif %}

					{# Acomptes pay√©s et Reste √† payer #}
					{% if quote.totalPaidDeposits > 0 %}
						<div class="pt-4 mt-3 border-t border-green-500/30">
							<p class="text-sm text-green-400 font-semibold mb-2">Acomptes r√©gl√©s :</p>
							{% for deposit in quote.deposits %}
								{% if deposit.status.value == 'paid' %}
									<div class="flex justify-between text-green-400 text-sm mb-1">
										<span>
											Acompte du
											{{ deposit.paidAt|date('d/m/Y') }}
											{% if deposit.percentage %}({{ deposit.percentage|number_format(0) }}%)
											{% endif %}
										</span>
										<span>-
											{{ deposit.formattedAmount }}</span>
									</div>
								{% endif %}
							{% endfor %}

							<div class="flex justify-between text-white font-bold text-lg pt-3 border-t border-white/10 mt-2">
								<span>Reste √† payer</span>
								<span>{{ quote.resteAPayerFormatted }}</span>
							</div>
						</div>
					{% endif %}
				</div>
			</div>
		</div>

		{# Actions disponibles #}
		{% if quote.statut.value in ['issued', 'sent'] %}
			<div class="grid md:grid-cols-2 gap-4">
				<a href="{{ magic_link(quote, 'sign') }}" class="btn-primary text-center py-4" data-turbo="false">
					{{ ux_icon('lucide:check-circle', {class: 'w-5 h-5 inline mr-2'}) }}
					Signer ce devis
				</a>
				<a href="{{ magic_link(quote, 'refuse') }}" class="btn-secondary text-center py-4">
					{{ ux_icon('lucide:x-circle', {class: 'w-5 h-5 inline mr-2'}) }}
					Refuser ce devis
				</a>
			</div>
		{% elseif quote.statut.value == 'signed' %}
			<div class="bg-green-500/20 border border-green-500/30 rounded-lg p-4 text-center">
				<p class="text-green-300 font-medium">
					{{ ux_icon('lucide:check-circle-2', {class: 'w-5 h-5 inline mr-2'}) }}
					Ce devis a √©t√© sign√© avec succ√®s !
				</p>
			</div>
		{% elseif quote.statut.value == 'refused' %}
			<div class="bg-red-500/20 border border-red-500/30 rounded-lg p-4 text-center">
				<p class="text-red-300 font-medium">
					{{ ux_icon('lucide:x-circle', {class: 'w-5 h-5 inline mr-2'}) }}
					Ce devis a √©t√© refus√©.
				</p>
			</div>
		{% endif %}
	</div>
{% endblock %}
