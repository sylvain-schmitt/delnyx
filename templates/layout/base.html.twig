<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta
		name="viewport" content="width=device-width, initial-scale=1.0">

		{# SEO Meta Tags #}
		<title>
			{% block title %}Delnyx - Développeur Web Freelance Symfony
			{% endblock %}
		</title>

		<meta name="description" content="{% block meta_description %}Développeur web freelance spécialisé en Symfony. Création de sites vitrine, applications web sur-mesure et maintenance. Solutions professionnelles adaptées aux TPE/PME.{% endblock %}">

		<meta name="keywords" content="{% block meta_keywords %}développeur web freelance, Symfony, PHP, React, sites vitrine, applications web, maintenance, TPE, PME{% endblock %}">

		<meta
		name="author" content="{% block meta_author %}Delnyx - Développeur Web Freelance{% endblock %}">

		{# Open Graph / Facebook #}
		<meta property="og:type" content="{% block og_type %}website{% endblock %}">
		<meta property="og:title" content="{% block og_title %}{{ block('title') }}{% endblock %}">
		<meta property="og:description" content="{% block og_description %}{{ block('meta_description') }}{% endblock %}">
		<meta property="og:url" content="{% block og_url %}{{ app.request.uri }}{% endblock %}">
		<meta property="og:site_name" content="Delnyx">
		<meta
		property="og:image" content="{% block og_image %}{{ absolute_url('images/og-image.jpg') }}?v=2{% endblock %}">
		{# Twitter Card #}
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content="{% block twitter_title %}{{ block('title') }}{% endblock %}">
		<meta name="twitter:description" content="{% block twitter_description %}{{ block('meta_description') }}{% endblock %}">
		<meta
		name="twitter:image" content="{% block twitter_image %}{{ block('og_image') }}{% endblock %}">

		{# Additional SEO #}
		<meta name="google-site-verification" content="I8Tmiz7luvHrxagDrHZvstTKfqxbBLCkU6kstBmBSYU"/>
		<meta name="robots" content="{% block robots %}index, follow{% endblock %}">
		<link rel="canonical" href="{% block canonical %}{{ app.request.uri }}{% endblock %}">


		<link rel="icon" type="image/png" href="{{ asset('images/favicon/favicon-96x96.png') }}" sizes="96x96"/>
		<link rel="icon" type="image/svg+xml" href="{{ asset('images/favicon/favicon.svg') }}"/>
		<link rel="shortcut icon" href="{{ asset('images/favicon/favicon.ico') }}"/>
		<link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/favicon/apple-touch-icon.png') }}"/>
		<meta name="apple-mobile-web-app-title" content="Delnyx"/>
		<link rel="manifest" href="{{ asset('images/favicon/site.webmanifest') }}"/>

		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('styles/app.css') }}">
		{% endblock %}

		{% block javascripts %}
			<script src="{{ asset('scripts/particles.min.js') }}"></script>
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body data-controller="scroll-animations">

		{% include 'partials/_nav.html.twig' %}

		<main>
			{% block body %}{% endblock %}
		</main>
		{% include 'partials/_footer.html.twig' %}
	</body>
</html>
