{% extends 'admin/layout/base.html.twig' %}
{% import 'admin/macros/pagination.html.twig' as pagination_macro %}

{% block title %}Avenants - Administration Delnyx{% endblock %}

{% block page_title %}Avenants{% endblock %}

{% block body %}
<div class="space-y-6">
    
    {# Message de filtrage par devis #}
    {% if filtered_quote %}
        <div class="bg-blue-500/20 border border-blue-500/30 rounded-lg p-4 flex items-center justify-between scroll-animate">
            <div class="flex items-center gap-3">
                {{ ux_icon('lucide:filter', {class: 'w-5 h-5 text-blue-400'}) }}
                <div>
                    <p class="text-white font-medium">Filtrage actif : Avenants du devis {{ filtered_quote.numero }}</p>
                    <p class="text-white/60 text-sm">{{ total_amendments }} avenant{{ total_amendments > 1 ? 's' : '' }} trouvé{{ total_amendments > 1 ? 's' : '' }}</p>
                </div>
            </div>
            <a href="{{ path('admin_amendment_index') }}" class="btn-secondary text-sm py-2 px-4">
                {{ ux_icon('lucide:x', {class: 'w-4 h-4'}) }}
                Retirer le filtre
            </a>
        </div>
    {% endif %}

    {# Header avec actions #}
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 scroll-animate">
        <div>
            <h1 class="text-2xl font-bold text-white">Avenants</h1>
            <p class="text-white/60 mt-1">{{ total_amendments }} avenant{{ total_amendments > 1 ? 's' : '' }} au total{% if not include_cancelled %} (hors annulés){% endif %}</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-2 sm:gap-3 w-full sm:w-auto">
            {# Bouton principal en pleine largeur sur mobile #}
            <a href="{{ path('admin_amendment_new') }}" class="btn-primary flex items-center justify-center gap-2 order-first sm:order-last">
                {{ ux_icon('lucide:file-plus', {class: 'w-4 h-4'}) }}
                <span class="sm:inline">Nouvel Avenant</span>
            </a>
            
            {# Bouton secondaire #}
            {% if include_cancelled %}
                <a href="{{ path('admin_amendment_index') }}" class="btn-secondary flex items-center justify-center gap-2" title="Masquer les annulés">
                    {{ ux_icon('lucide:eye-off', {class: 'w-4 h-4'}) }}
                    <span class="hidden lg:inline">Masquer les annulés</span>
                </a>
            {% else %}
                <a href="{{ path('admin_amendment_index', {include_cancelled: true}) }}" class="btn-secondary flex items-center justify-center gap-2" title="Afficher les annulés">
                    {{ ux_icon('lucide:eye', {class: 'w-4 h-4'}) }}
                    <span class="hidden lg:inline">Afficher les annulés</span>
                </a>
            {% endif %}
        </div>
    </div>

    {# Liste des avenants #}
    {% if amendments|length > 0 %}
        {# Version desktop : table #}
        <div class="hidden md:block bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl overflow-hidden scroll-animate animate-delay-100">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-white/5 border-b border-white/20">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Numéro</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Devis</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Date</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Montant TTC</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-white/80 uppercase tracking-wider">Statut</th>
                            <th class="px-6 py-4 text-right text-xs font-semibold text-white/80 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-white/10">
                        {% for amendment in amendments %}
                            <tr class="hover:bg-white/5 transition-colors duration-200">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-white">{{ amendment.numero ?? 'N/A' }}</div>
                                </td>
                                <td class="px-6 py-4">
                                    {% if amendment.quote %}
                                        <div class="text-sm text-white">{{ amendment.quote.numero }}</div>
                                        <div class="text-xs text-white/60">
                                            {% if amendment.quote.client.companyName %}
                                                {{ amendment.quote.client.companyName }} - {{ amendment.quote.client.prenom }} {{ amendment.quote.client.nom }}
                                            {% else %}
                                                {{ amendment.quote.client.prenom }} {{ amendment.quote.client.nom }}
                                            {% endif %}
                                        </div>
                                    {% else %}
                                        <div class="text-sm text-white/60">Aucun devis</div>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-white">{{ amendment.dateCreation|date('d/m/Y') }}</div>
                                    {% if amendment.dateSignature %}
                                        <div class="text-xs text-white/60">Signé le {{ amendment.dateSignature|date('d/m/Y') }}</div>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-white">{{ amendment.montantTTCFormate }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {% set status = amendment.statutEnum %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                        {% if status.value == 'draft' %}bg-gray-500/20 text-gray-300
                                        {% elseif status.value == 'sent' %}bg-blue-500/20 text-blue-300
                                        {% elseif status.value == 'signed' %}bg-green-500/20 text-green-300
                                        {% elseif status.value == 'cancelled' %}bg-gray-600/20 text-gray-400
                                        {% else %}bg-gray-500/20 text-gray-300{% endif %}">
                                        {{ status.label }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex items-center justify-end gap-2">
                                        {{ component('EntityActions', { 
                                            entity: amendment, 
                                            type: 'amendment',
                                            layout: 'inline'
                                        }) }}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {# Version mobile : cards #}
        <div class="block md:hidden space-y-4 scroll-animate animate-delay-100">
            {% for amendment in amendments %}
                <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-4">
                    <div class="flex items-start justify-between mb-3">
                        <div class="flex-1">
                            <div class="text-sm font-medium text-white mb-1">{{ amendment.numero ?? 'N/A' }}</div>
                            {% if amendment.quote %}
                                <div class="text-sm text-white">{{ amendment.quote.numero }}</div>
                                <div class="text-xs text-white/60">
                                    {% if amendment.quote.client.companyName %}
                                        {{ amendment.quote.client.companyName }} - {{ amendment.quote.client.prenom }} {{ amendment.quote.client.nom }}
                                    {% else %}
                                        {{ amendment.quote.client.prenom }} {{ amendment.quote.client.nom }}
                                    {% endif %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="space-y-2 text-sm mb-3">
                        <div class="flex justify-between">
                            <span class="text-white/60">Date</span>
                            <span class="text-white">{{ amendment.dateCreation|date('d/m/Y') }}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-white/60">Montant TTC</span>
                            <span class="text-white font-medium">{{ amendment.montantTTCFormate }}</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-white/60">Statut</span>
                            {% set status = amendment.statutEnum %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                {% if status.value == 'draft' %}bg-gray-500/20 text-gray-300
                                {% elseif status.value == 'sent' %}bg-blue-500/20 text-blue-300
                                {% elseif status.value == 'signed' %}bg-green-500/20 text-green-300
                                {% elseif status.value == 'cancelled' %}bg-gray-600/20 text-gray-400
                                {% else %}bg-gray-500/20 text-gray-300{% endif %}">
                                {{ status.label }}
                            </span>
                        </div>
                    </div>
                    
                    <div class="pt-3 border-t border-white/10">
                        {{ component('EntityActions', { 
                            entity: amendment, 
                            type: 'amendment',
                            layout: 'mobile'
                        }) }}
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Pagination #}
        {{ pagination_macro.render(current_page, total_pages, 'admin_amendment_index', include_cancelled ? {include_cancelled: true} : {}, 15, total_amendments) }}
    {% else %}
        {# État vide #}
        <div class="text-center py-20 scroll-animate">
            <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-12 max-w-md mx-auto">
                {{ ux_icon('lucide:file-edit', {class: 'w-16 h-16 text-gray-400 mb-6 mx-auto'}) }}
                <h3 class="text-2xl font-bold text-white mb-4">Aucun avenant</h3>
                <p class="text-gray-300 mb-6">
                    Créez un avenant pour modifier un devis signé.
                </p>
                <a href="{{ path('admin_amendment_new') }}" class="btn-primary">
                    {{ ux_icon('lucide:file-plus', {class: 'w-4 h-4 mr-2'}) }}
                    Créer un avenant
                </a>
            </div>
        </div>
    {% endif %}
</div>

{# Modal d'envoi d'email #}
{{ component('EmailModal') }}

{% endblock %}

