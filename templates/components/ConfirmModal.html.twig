{# Modal de confirmation générique #}
{# Ce modal est réutilisable et piloté par le controller Stimulus confirm-modal #}

	<div
	data-controller="confirm-modal" class="relative z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true" data-confirm-modal-target="modal"> {# Overlay #}
	<div class="fixed inset-0 bg-black/50 backdrop-blur-sm transition-opacity hidden" data-confirm-modal-target="overlay" data-action="click->confirm-modal#closeOnOverlay"></div>

	<div class="fixed inset-0 z-10 overflow-y-auto">
		<div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">

			<div class="relative transform overflow-hidden rounded-2xl bg-gradient-to-br from-slate-800 to-slate-900 border border-white/10 text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-lg">

				<div class="px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
					<div class="sm:flex sm:items-start">
						<div class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-amber-500/20 sm:mx-0 sm:h-10 sm:w-10">
							{{ ux_icon('lucide:alert-triangle', {class: 'h-6 w-6 text-amber-400'}) }}
						</div>
						<div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left w-full">
							<h3 class="text-lg font-semibold leading-6 text-white" id="modal-title" data-confirm-modal-target="title">
								Confirmer l'action
							</h3>
							<div class="mt-2">
								<p class="text-sm text-white/70" data-confirm-modal-target="message">
									Êtes-vous sûr de vouloir effectuer cette action ?
								</p>
							</div>
						</div>
					</div>
				</div>

				<div class="bg-white/5 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
					<button type="button" class="inline-flex w-full justify-center rounded-lg bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 sm:ml-3 sm:w-auto transition-colors" data-confirm-modal-target="confirmButton" data-action="click->confirm-modal#confirm">
						<span data-confirm-modal-target="buttonText">Confirmer</span>
					</button>
					<button type="button" class="mt-3 inline-flex w-full justify-center rounded-lg bg-white/5 px-3 py-2 text-sm font-semibold text-white/70 shadow-sm ring-1 ring-inset ring-white/10 hover:bg-white/10 sm:mt-0 sm:w-auto transition-colors" data-confirm-modal-target="cancelButton" data-action="click->confirm-modal#close">
						Annuler
					</button>
				</div>
			</div>
		</div>
	</div>
</div>
