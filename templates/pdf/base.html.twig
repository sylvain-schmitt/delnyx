<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title|default('Document') }}</title>
		<style>
			/* Reset et base */
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: 'Arial', sans-serif;
				font-size: 12px;
				line-height: 1.4;
				color: #333;
				background: white;
			}

			/* Layout principal */
			.document {
				max-width: 210mm;
				margin: 0 auto;
				padding: 20mm;
				background: white;
			}

			/* En-tête */
			.header {
				display: flex;
				justify-content: space-between;
				align-items: flex-start;
				margin-bottom: 30px;
				border-bottom: 2px solid #2563eb;
				padding-bottom: 20px;
			}

			.company-info {
				flex: 1;
			}

			.company-logo {
				font-size: 24px;
				font-weight: bold;
				color: #2563eb;
				margin-bottom: 10px;
			}

			.company-details {
				font-size: 11px;
				color: #666;
			}

			.document-info {
				text-align: right;
				flex: 1;
			}

			.document-title {
				font-size: 28px;
				font-weight: bold;
				color: #2563eb;
				margin-bottom: 10px;
			}

			.document-number {
				font-size: 14px;
				font-weight: bold;
				color: #333;
			}

			.document-date {
				font-size: 11px;
				color: #666;
				margin-top: 5px;
			}

			/* Informations client */
			.client-section {
				display: flex;
				justify-content: space-between;
				margin-bottom: 30px;
			}

			.client-info,
			.company-billing {
				flex: 1;
				padding: 15px;
				background: #f8fafc;
				border: 1px solid #e2e8f0;
				border-radius: 4px;
			}

			.client-info {
				margin-right: 15px;
			}

			.section-title {
				font-size: 14px;
				font-weight: bold;
				color: #2563eb;
				margin-bottom: 10px;
				text-transform: uppercase;
			}

			.client-name {
				font-size: 16px;
				font-weight: bold;
				color: #333;
				margin-bottom: 8px;
			}

			.client-details {
				font-size: 11px;
				color: #666;
				line-height: 1.5;
			}

			/* Tableau des services */
			.services-table {
				width: 100%;
				border-collapse: collapse;
				margin-bottom: 30px;
			}

			.services-table th,
			.services-table td {
				padding: 12px 8px;
				text-align: left;
				border-bottom: 1px solid #e2e8f0;
			}

			.services-table th {
				background: #f1f5f9;
				font-weight: bold;
				color: #334155;
				font-size: 11px;
				text-transform: uppercase;
			}

			.services-table td {
				font-size: 11px;
				color: #333;
			}

			.services-table .text-right {
				text-align: right;
			}

			.services-table .text-center {
				text-align: center;
			}

			/* Totaux */
			.totals {
				display: flex;
				justify-content: flex-end;
				margin-bottom: 30px;
			}

			.totals-table {
				width: 300px;
				border-collapse: collapse;
			}

			.totals-table td {
				padding: 8px 12px;
				border-bottom: 1px solid #e2e8f0;
				font-size: 11px;
			}

			.totals-table .label {
				text-align: right;
				color: #666;
				font-weight: normal;
			}

			.totals-table .amount {
				text-align: right;
				font-weight: bold;
				color: #333;
			}

			.totals-table .total-row {
				background: #f1f5f9;
				font-weight: bold;
				color: #2563eb;
				font-size: 12px;
			}

			/* Conditions et notes */
			.conditions-section {
				margin-bottom: 30px;
			}

			.conditions-title {
				font-size: 14px;
				font-weight: bold;
				color: #2563eb;
				margin-bottom: 10px;
			}

			.conditions-content {
				font-size: 10px;
				color: #666;
				line-height: 1.5;
				background: #f8fafc;
				padding: 15px;
				border-radius: 4px;
				border-left: 4px solid #2563eb;
			}

			/* Pied de page */
			.footer {
				margin-top: 40px;
				padding-top: 20px;
				border-top: 1px solid #e2e8f0;
				text-align: center;
				font-size: 9px;
				color: #666;
			}

			/* Mentions légales */
			.legal-mentions {
				font-size: 8px;
				color: #999;
				line-height: 1.3;
				margin-top: 20px;
				padding: 10px;
				background: #f8fafc;
				border-radius: 4px;
			}

			/* Responsive pour impression */
			@media print {
				.document {
					padding: 15mm;
				}

				.header {
					page-break-inside: avoid;
				}

				.services-table {
					page-break-inside: avoid;
				}
			}

			/* Styles spécifiques pour les statuts */
			.status-badge {
				display: inline-block;
				padding: 4px 8px;
				border-radius: 12px;
				font-size: 9px;
				font-weight: bold;
				text-transform: uppercase;
			}

			.status-brouillon {
				background: #fef3c7;
				color: #92400e;
			}
			.status-envoye {
				background: #dbeafe;
				color: #1e40af;
			}
			.status-accepte {
				background: #d1fae5;
				color: #065f46;
			}
			.status-refuse {
				background: #fee2e2;
				color: #991b1b;
			}
			.status-expire {
				background: #f3f4f6;
				color: #374151;
			}
		</style>
	</head>
	<body>
		<div class="document"> {% block content %}{% endblock %}
			</div>
		</body>
	</html>
