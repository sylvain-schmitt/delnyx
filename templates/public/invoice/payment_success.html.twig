{% extends 'public/layout/base.html.twig' %}

{% block title %}Paiement réussi - Facture {{ invoice.numero }}{% endblock %}

{% block body %}
<div class="max-w-md mx-auto text-center">
    <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl p-8">
        <div class="mb-6">
            <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-500/20 border border-green-500/50 mb-4">
                {{ ux_icon('lucide:check', {class: 'h-8 w-8 text-green-400'}) }}
            </div>
            <h2 class="text-2xl font-bold text-white mb-2">Paiement réussi !</h2>
            <p class="text-white/60">
                Merci, le paiement de la facture
                <strong>{{ invoice.numero }}</strong>
                a bien été enregistré.
            </p>
        </div>

        <div class="bg-white/5 rounded-lg p-4 mb-8 border border-white/10">
            <div class="flex justify-between items-center mb-2">
                <span class="text-white/60">Montant payé</span>
                <span class="text-xl font-bold text-white">{{ invoice.montantTTCFormate }}</span>
            </div>
            <div class="flex justify-between items-center">
                <span class="text-white/60">Date</span>
                <span class="text-white">{{ "now"|date("d/m/Y H:i") }}</span>
            </div>
        </div>

        <div class="flex flex-col gap-3">
            <a href="{{ magic_link(invoice, 'view') }}" class="w-full px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg text-white font-semibold transition-colors">
                {{ ux_icon('lucide:file-text', {class: 'w-5 h-5 inline mr-2'}) }}
                Voir la facture
            </a>
        </div>

        <p class="text-white/40 text-sm mt-6">
            Un email de confirmation vous a été envoyé.
        </p>
    </div>
</div>
{% endblock %}
