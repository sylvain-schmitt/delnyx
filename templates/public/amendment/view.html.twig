{% extends 'public/layout/base.html.twig' %}

{% block title %}Avenant {{ amendment.numero }} - Delnyx{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-8 mb-6">
        <div class="flex items-start justify-between mb-6">
            <div>
                <h1 class="text-3xl font-bold text-white mb-2">Avenant</h1>
                <p class="text-xl text-white/80">{{ amendment.numero }}</p>
                {% if amendment.quote %}
                    <p class="text-sm text-white/60 mt-2">Devis associé : {{ amendment.quote.numero }}</p>
                {% endif %}
            </div>
            <div class="text-right">
                {% set status = amendment.statut %}
                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium
                    {% if status.value == 'draft' %}bg-gray-500/20 text-gray-300
                    {% elseif status.value == 'issued' %}bg-blue-500/20 text-blue-300
                    {% elseif status.value == 'sent' %}bg-purple-500/20 text-purple-300
                    {% elseif status.value == 'signed' %}bg-green-500/20 text-green-300
                    {% elseif status.value == 'refused' %}bg-red-500/20 text-red-300
                    {% else %}bg-gray-500/20 text-gray-300{% endif %}">
                    {{ status.label }}
                </span>
            </div>
        </div>

        {# Informations #}
        <div class="mb-6">
            {% if amendment.quote %}
                <h2 class="text-sm font-semibold text-white/60 uppercase mb-2">Client</h2>
                <p class="text-white font-medium">{{ amendment.quote.client.nomComplet }}</p>
            {% endif %}
            <p class="text-white/80 text-sm mt-2">Date de création : {{ amendment.dateCreation|date('d/m/Y') }}</p>
        </div>

        {# Motif de l'avenant #}
        {% if amendment.motif %}
            <div class="mb-6">
                <h2 class="text-sm font-semibold text-white/60 uppercase mb-2">Motif</h2>
                <p class="text-white/80">{{ amendment.motif }}</p>
            </div>
        {% endif %}

        {# Lignes de l'avenant #}
        <div class="overflow-x-auto mb-6">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-white/20">
                        <th class="px-4 py-3 text-left text-xs font-semibold text-white/80 uppercase">Description</th>
                        <th class="px-4 py-3 text-right text-xs font-semibold text-white/80 uppercase">Qté</th>
                        <th class="px-4 py-3 text-right text-xs font-semibold text-white/80 uppercase">P.U. HT</th>
                        <th class="px-4 py-3 text-right text-xs font-semibold text-white/80 uppercase">Total HT</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/10">
                    {% for line in amendment.lines %}
                        <tr>
                            <td class="px-4 py-3 text-white">{{ line.description }}</td>
                            <td class="px-4 py-3 text-right text-white/80">{{ line.quantity }}</td>
                            <td class="px-4 py-3 text-right text-white/80">{{ (line.unitPrice|number_format(2, ',', ' ')) ~ ' €' }}</td>
                            <td class="px-4 py-3 text-right text-white font-medium">{{ line.totalHtFormatted }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {# Totaux #}
        <div class="flex justify-end">
            <div class="w-full md:w-1/2 space-y-2">
                <div class="flex justify-between text-white/80">
                    <span>Ajustement HT</span>
                    <span class="font-medium">{{ amendment.montantHTFormate }}</span>
                </div>
                <div class="flex justify-between text-white/80">
                    <span>TVA</span>
                    <span class="font-medium">{{ amendment.montantTVAFormate }}</span>
                </div>
                <div class="flex justify-between text-xl font-bold text-white pt-2 border-t border-white/20">
                    <span>Total TTC</span>
                    <span>{{ amendment.montantTTCFormate }}</span>
                </div>
            </div>
        </div>
    </div>

    {# Actions #}
    {% if amendment.statut.value in ['issued', 'sent'] %}
        <div class="grid md:grid-cols-2 gap-4">
            <a href="{{ magic_link(amendment, 'sign') }}" class="flex items-center justify-center px-4 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10 transition-colors duration-200" data-turbo="false">
                {{ ux_icon('lucide:pen-tool', {class: 'w-5 h-5 mr-2'}) }}
                Signer cet avenant
            </a>
            <a href="{{ magic_link(amendment, 'refuse') }}" class="btn-secondary text-center py-4">
                {{ ux_icon('lucide:x-circle', {class: 'w-5 h-5 inline mr-2'}) }}
                Refuser cet avenant
            </a>
        </div>
    {% elseif amendment.statut.value == 'signed' %}
        <div class="bg-green-500/20 border border-green-500/30 rounded-lg p-4 text-center">
            <p class="text-green-300 font-medium">
                {{ ux_icon('lucide:check-circle-2', {class: 'w-5 h-5 inline mr-2'}) }}
                Cet avenant a été signé avec succès !
            </p>
        </div>
    {% elseif amendment.statut.value == 'refused' %}
        <div class="bg-red-500/20 border border-red-500/30 rounded-lg p-4 text-center">
            <p class="text-red-300 font-medium">
                {{ ux_icon('lucide:x-circle', {class: 'w-5 h-5 inline mr-2'}) }}
                Cet avenant a été refusé.
            </p>
        </div>
    {% endif %}
</div>
{% endblock %}


