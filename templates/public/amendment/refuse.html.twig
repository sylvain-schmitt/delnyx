{% extends 'public/layout/base.html.twig' %}

{% block title %}Refuser l'avenant {{ amendment.numero }} - Delnyx{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-8">
        <h1 class="text-2xl font-bold text-white mb-6">Refus de l'avenant</h1>
        
        <div class="mb-6">
            <p class="text-white/80 mb-2">
                <span class="font-medium text-white">Avenant :</span> {{ amendment.numero }}
            </p>
            <p class="text-white/80 mb-2">
                <span class="font-medium text-white">Montant TTC :</span> {{ amendment.montantTTCFormate }}
            </p>
            {% if amendment.quote %}
                <p class="text-white/80">
                    <span class="font-medium text-white">Devis associé :</span> {{ amendment.quote.numero }}
                </p>
            {% endif %}
        </div>

        <div class="bg-yellow-500/20 border border-yellow-500/30 rounded-lg p-4 mb-6">
            <p class="text-yellow-300 text-sm">
                {{ ux_icon('lucide:alert-triangle', {class: 'w-4 h-4 inline mr-2'}) }}
                Vous êtes sur le point de refuser cet avenant. Cette action est définitive.
            </p>
        </div>

        <form method="post" class="space-y-6">
            <div>
                <label for="refuse_reason" class="block text-sm font-medium text-white mb-2">
                    Raison du refus (optionnel)
                </label>
                <textarea 
                    id="refuse_reason" 
                    name="refuse_reason" 
                    rows="4"
                    class="w-full px-4 py-2 bg-white/5 border border-white/20 rounded-lg text-white placeholder-white/40 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="Vous pouvez indiquer la raison de votre refus..."
                ></textarea>
            </div>

            <div class="flex items-start">
                <input type="checkbox" id="confirm_refuse" name="confirm_refuse" required
                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-red-500 focus:ring-2 focus:ring-red-500">
                <label for="confirm_refuse" class="ml-3 text-sm text-white/80">
                    Je confirme vouloir refuser définitivement cet avenant. *
                </label>
            </div>

            <div class="flex gap-4">
                <button type="submit" class="btn-secondary flex-1 py-3 bg-red-500/20 hover:bg-red-500/30 border-red-500/30">
                    {{ ux_icon('lucide:x-circle', {class: 'w-5 h-5 inline mr-2'}) }}
                    Confirmer le refus
                </button>
                <a href="{{ path('public_amendment_view', {
                    id: amendment.id,
                    expires: app.request.query.get('expires'),
                    signature: app.request.query.get('signature')
                }) }}" class="btn-secondary flex-1 py-3 text-center">
                    Annuler
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}


