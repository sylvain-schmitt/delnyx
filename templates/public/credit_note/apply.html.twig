{% extends 'public/layout/base.html.twig' %}

{% block title %}Appliquer l'avoir {{ creditNote.numero }} - Delnyx{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-8">
        <h1 class="text-2xl font-bold text-white mb-6">Application de l'avoir</h1>
        
        <div class="mb-6">
            <p class="text-white/80 mb-2">
                <span class="font-medium text-white">Avoir :</span> {{ creditNote.numero }}
            </p>
            {% if creditNote.invoice %}
                <p class="text-white/80 mb-2">
                    <span class="font-medium text-white">Facture associée :</span> {{ creditNote.invoice.numero }}
                </p>
                <p class="text-white/80 mb-2">
                    <span class="font-medium text-white">Client :</span> {{ creditNote.invoice.client.nomComplet }}
                </p>
            {% endif %}
            <p class="text-2xl font-bold text-white mt-4">
                Montant de l'avoir : {{ creditNote.montantTTCFormatted }}
            </p>
        </div>

        {% if creditNote.reason %}
            <div class="mb-6 bg-blue-500/10 border border-blue-500/20 rounded-lg p-4">
                <p class="text-sm font-semibold text-white/60 uppercase mb-2">Raison de l'avoir</p>
                <p class="text-white/80">{{ creditNote.reason }}</p>
            </div>
        {% endif %}

        <div class="bg-blue-500/20 border border-blue-500/30 rounded-lg p-4 mb-6">
            <p class="text-blue-300 text-sm">
                {{ ux_icon('lucide:info', {class: 'w-4 h-4 inline mr-2'}) }}
                En appliquant cet avoir, vous confirmez avoir reçu le remboursement ou la déduction sur une facture future.
            </p>
        </div>

        <form method="post" class="space-y-6">
            <div class="flex items-start">
                <input 
                    type="checkbox" 
                    id="confirm_apply" 
                    name="confirm_apply" 
                    required
                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-blue-500 focus:ring-2 focus:ring-blue-500"
                >
                <label for="confirm_apply" class="ml-3 text-sm text-white/80">
                    Je confirme avoir reçu le remboursement ou accepter la déduction de cet avoir. *
                </label>
            </div>

            <div class="flex gap-4">
                <button type="submit" class="btn-primary flex-1 py-3">
                    {{ ux_icon('lucide:check-circle', {class: 'w-5 h-5 inline mr-2'}) }}
                    Confirmer l'application
                </button>
                <a href="{{ path('public_credit_note_view', {
                    id: creditNote.id,
                    expires: app.request.query.get('expires'),
                    signature: app.request.query.get('signature')
                }) }}" class="btn-secondary flex-1 py-3 text-center">
                    Annuler
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}


